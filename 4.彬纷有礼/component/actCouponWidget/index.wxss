/* 2021年11月17日 星期三  */
.buoy-box {
  position: relative;
  display: flex;
  align-items: flex-end;
}
.buoy-img-0 {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
}
.buoy-img-1 {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 10px;
  right: 30rpx;
  margin: 0 auto;
  animation-name: scale-head;
  animation-delay: 0s;
  animation-duration: 0.5s;
  animation-direction: normal;
  animation-iteration-count: infinite;
}

.buoy-img-2 {
  width: 100%;
  height: 35rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}
.buoy-img-3 {
  width: 70rpx;
  height: 38rpx;
  animation-name: slide-in;
  animation-duration: 1.5s;
  animation-delay: 0s;
  animation-direction: normal;
  animation-iteration-count: infinite;
  position: absolute;
  bottom: 0px;
}
.buoy-img-4 {
  position: absolute;
  bottom: 4rpx;
  width: 90%;
  height: 30rpx;
  right: 0;
  left: 0;
  margin: auto;
  z-index: 2;
}
.buoy-item {
  position: relative;
  height: 40rpx;
  width: 100%;
  overflow: hidden;
  z-index: 3;
  margin-bottom: 28rpx;
}
@keyframes scale-head {
  0% {
    transform: scale(1);
  }
  /* 50% {
    transform: scale(1.3);
  } */
  100% {
    transform: scale(2);
  }
}

@keyframes slide-in {
  0% {
    transform: translateX(-100rpx);
  }

  100% {
    transform: translateX(60rpx);
  }
}
.unbox-img-0 {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: -52rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
}
.display-hn-buoy{
  position: relative;
  display: flex;
  align-items: flex-start;
}
.display-hn-buoy .img{
  width: 140rpx;
  height: 170rpx;
}
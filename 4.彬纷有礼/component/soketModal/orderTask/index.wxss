.order-task-box {
  width: 600rpx;
  height: 460rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  background-color: #ffffff;
  border-radius: 10px;
  box-sizing: border-box;
  position: relative;
  z-index: 1;
  background-repeat: no-repeat;
  background-size: 100% 100%;

}

.order-task-title {
  font-size: 36rpx;
  font-weight: 400;
  text-align: center;
  color: #000000;
  padding-top: 80rpx;
  padding-bottom: 40rpx;
}

.order-task-tips01 {
  font-size: 32rpx;
  font-weight: 400;
  text-align: center;
  color: #a3a2a8;
}

.order-task-tips02 {
  font-size: 32rpx;
  font-weight: 400;
  text-align: center;
  color: #000000;
  padding-top: 130rpx;
}


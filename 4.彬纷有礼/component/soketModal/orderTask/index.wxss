.order-task-box .tools {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  position: absolute;
  left: 0;
  bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.order-task-box .tools-02 {
  display: flex;
  justify-content: center;
  padding: 0 20rpx;
  position: absolute;
  left: 0;
  bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}


.order-task-box .tools-btn {
  width: 240rpx;
  height: 80rpx;
  border-radius: 20px;
  text-align: center;
  line-height: 80rpx;
}

.order-task-box .tools-btn.info {
  font-size: 32rpx;
  font-weight: 400;
  color: #636266;
  border: 1rpx solid #636266;

}

.order-task-box .tools-btn.sign {
  font-size: 32rpx;
  font-weight: 400;
  color: #ffffff;
  background-color: #E3001B;
  border: 1rpx solid #E3001B;
}

.order-task-close {
  text-align: center;
  margin-top: 30rpx;
}


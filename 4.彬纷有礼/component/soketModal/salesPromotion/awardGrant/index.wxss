.award-grant-card-bg{
  width: 596rpx;
  height: 175rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.award-grant-card-cright{
  position: relative;
  z-index: 1;
}

.award-grant-card-cright .agc-cr-title{
  font-size: 24rpx;

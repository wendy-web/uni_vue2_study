  color: #666666;
}

.award-grant-card-cleft{
  width: 140rpx;
  position: absolute;
  right: 30rpx;
  text-align: center;
  bottom:30rpx;
  font-size: 44rpx;
  font-weight: 700;
  color: #e3001b;
}

.award-grant-card-cleft .agc-cl-sign{
  font-size: 20rpx;
  font-weight: 400;

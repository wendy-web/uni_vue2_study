}

.award-grant-tips04{
  font-size: 20rpx;
  font-weight: 400;
  color: #ffffff;
  text-align: center;
  padding-top: 70rpx;
  padding-bottom: 10rpx;
}


.award-grant-look{
  position: absolute;
  left: 0;
  bottom: 120rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}
.agl-btn{
    width: 280rpx;
    height: 80rpx;
    background-color: #fed032;
    border-radius: 20px;
    font-size: 36rpx;
    font-weight: 400;

  border-radius: 10px;
  box-sizing: border-box;
}

.award-grant-title{
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  padding-top: 60rpx;
  text-align: center;
}

.award-grant-start{
  font-size: 0;
  text-align: center;
  margin-top: 10rpx;
  margin-bottom: 40rpx;
}

.award-grant-tips01{
  font-size: 40rpx;
  font-weight: 400;
  text-align: center;

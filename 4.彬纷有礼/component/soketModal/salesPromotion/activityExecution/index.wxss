/* pages/tabBar/geren/salesPromotion/activityExecution/index.wxss */
.activity-execution-box{
  width: 610rpx;
  height: 878rpx;
  background-image: linear-gradient(317deg,#fd0c45 2%, #ff6836);
  border-radius: 10px;
  box-sizing: border-box;
}

.activity-execution-title{
  height: 186rpx;
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items:center;
}

.activity-execution-list{
  height: 556rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.ael-item+.ael-item{
  margin-top: 40rpx;
}

.ael-item-head{
  height: 96rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-image: linear-gradient(133deg,#ffd6da 4%, #ffe4d5);
  border-radius: 5px 5px 0 0;
}
.ael-item-head-title{
  font-size: 28rpx;
  font-weight: 400;
  color: #000018;
}

.ael-item-head-day{
  font-size: 20rpx;
  font-weight: 400;
  color: #666666;
}

.ael-item-head-day .day-num{
  color: #FF3313;
}

.ael-item-content{
  height: 118rpx;
  background-color: #FFFAFA;
  border-radius: 0 0 5px 5px;
  display: flex;
  position: relative;
}
.ael-item-content::after{
  content: '';
  width: 2rpx;
  height: 40rpx;
  background-color: #CCCCCC;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);

}

.ael-ic-item{
   flex: 1;
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
}


.ael-ic-item-value .empty{
  color: #666666;
}

.ael-ic-item-value .value{
  font-size: 40rpx;
  font-weight: 400;
  color: #00af29;
}
.ael-ic-item-value .sign{
  font-size: 24rpx;
}

.ael-ic-item-label{
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
}

.activity-execution-look{
   padding-top: 16rpx;
   padding-bottom: 40rpx;
   display: flex;
   justify-content: center;
}
.ael-btn{
    width: 280rpx;
    height: 80rpx;
    background-color: #fed032;
    border-radius: 20px;
    font-size: 36rpx;
    font-weight: 400;
    color: #e3001b;
    text-align: center;
    line-height: 80rpx;
}


.activity-execution-close{
  text-align: center;
  margin-top: 30rpx;
}
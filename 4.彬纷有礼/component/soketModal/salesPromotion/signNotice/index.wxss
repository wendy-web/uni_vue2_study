.sign-notice-box{
  width: 610rpx;
  background-color: #ffffff;
  border-radius: 10px;
  box-sizing: border-box;
  padding: 0 20rpx 56rpx;
}
.sign-notice-box .notice-icon{
  width: 80rpx;
  height: 80rpx;
  margin-right: 40rpx;
}
.sign-notice-box .sgmb-title{
  font-size: 36rpx;
  font-weight: 700;
  color: #000018;
  height: 160rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.sign-notice-box .tips{
  font-size: 28rpx;
  padding: 0 70rpx;
  font-weight: 700;
  color: #000018;
  text-align: center;
}
.sign-notice-box .pro-name{
  padding: 0 70rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #000018;
  text-align: center;
  margin-top: 60rpx;
}
.sign-notice-box .tools{
  display: flex;
  justify-content:space-between;
  margin-top: 80rpx;
  padding: 0 20rpx;
}
.sign-notice-box .tools-btn{
  width: 240rpx;
  height: 80rpx;
  border-radius: 20px;
  text-align: center;
  line-height: 80rpx;
}

.sign-notice-box .tools-btn.info{
  font-size: 32rpx;
  font-weight: 400;
  color: #636266;
  border: 1rpx solid #636266;

}
.sign-notice-box .tools-btn.sign{
  font-size: 32rpx;
  font-weight: 400;
  color: #ffffff;
  background-color: #E3001B;
  border: 1rpx solid #E3001B;
}

.sign-notice-close{
  text-align: center;
  margin-top: 30rpx;
}
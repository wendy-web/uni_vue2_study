/* component/videoAd.wxss */
.weui-mask,
.weui-mask_transparent {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .6);
}

/* 视频弹窗css */
.weui-half-screen-dialog {
  max-height: 100%;
  height: 100%;
  padding: unset;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 5000;
  line-height: 1.4;
  background-color: var(--weui-BG-2);
  overflow: hidden;
}

.weui-half-screen-dialog__hd {
  background-color: #000000;
  color: #ffffff;
  font-size: 8px;
  height: 8em;
  display: flex;
  align-items: center;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom:0;
  z-index: 99;
  padding:unset;
}

.weui-half-screen-dialog__bd {
  height: unset;
  text-align: center;
  padding-top: unset;
  padding-bottom: unset;
}

.videoCss {
  width: 100%;
  /* height: 97%; */
  height: 100%;
}

.videoH100 {
  width: 100%;
  height: 100%;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  width: 100%;
  font-size: 34rpx;
  padding: 0px 20rpx;
}

.flex-align {
  display: flex;
  align-items: center;
  padding: 10rpx 30rpx;
  border: 1px solid #3f3f3f;
  border-radius: 50rpx;

}

.flex-align .colorfff {
  color: #fff;

}

.line {
  border-left: 1px solid #3f3f3f;
  margin: 0px 15rpx;
  height: 30rpx;
}

/* dialog 样式 */

.weui-dialog {
  width: 320px;
  margin: 0 auto;

}

.weui-dialog {
  position: fixed;
  z-index: 5000;
  top: 50%;
  left: 16px;
  right: 16px;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  background-color: var(--weui-BG-2);
  text-align: center;
  border-radius: 12px;
  overflow: hidden;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: column;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  flex-direction: column;
  max-height: 90%;

}

.weui-dialog__bd:first-child {
  min-height: 40px;
  padding: 32px 24px 0;
  font-weight: 700;
  color: var(--weui-FG-0);
  -webkit-flex-direction: column;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  display: flex;

}

.weui-dialog__bd {
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  font-size: 17px;
  line-height: 1.4;
  word-wrap: break-word;
  -webkit-hyphens: auto;
  hyphens: auto;
  margin-bottom: 35rpx;
}

.weui-dialog__ft {
  position: relative;
  line-height: 56px;
  min-height: 56px;
  font-size: 17px;
  display: flex;
}

.weui-dialog__ft:after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid var(--weui-DIALOG-LINE-COLOR);
  color: var(--weui-DIALOG-LINE-COLOR);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5)
}



.weui-dialog__btn {
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  color: var(--weui-LINK);
  font-weight: 700;
  text-decoration: none;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  position: relative;

}

.weui-dialog__btn_default {
  color: #191919;

}

.weui-dialog__btn:first-child:after {
  display: none;

}

.weui-dialog__btn:after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-left: 1px solid var(--weui-DIALOG-LINE-COLOR);
  color: var(--weui-DIALOG-LINE-COLOR);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleX(.5);
  transform: scaleX(.5);

}

/* capsule: 修改视频组件胶囊距离顶部位置 */
.capsule {
  position: fixed;
  /* top: 128rpx; */
  top: 160rpx;
  width: 100%;
  z-index: 1;
}

.pdlr40 {
  padding: 0px 40rpx;
}


@media only screen and (min-height: 736px){

  .capsule {
    top: 90px;
  }
}
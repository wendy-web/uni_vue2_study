/* component/newList/list.wxss */
.content-item {
  background: #ffffff;
  margin: 25rpx 20rpx;
  padding: 20rpx 20rpx;
  height: 200 rpx;
  border-radius: 15rpx;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  display: flex;
  
}

.newsBox {
  padding-left: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow: hidden;
  text-overflow: ellipsis;
}
.news_time {
  font-size: 20rpx;
  text-align: left;
  color: #939393;
}

.news_pic {
  width: 330rpx;
  height: 186rpx;
  border-radius: 5px;
}

.news_title {
  height: auto;
  font-size: 24rpx;
  text-align: left;
  color: #272727;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.news_desc {
  height: auto;
  font-size: 20rpx;
  text-align: left;
  color: #939393;

}
.news_desc .text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.giveAlike {
  background: #f0f0f0;
  height: auto;
  min-height: 42rpx;
  display: flex;
  padding: 5rpx 0px;
  justify-content: space-around;
  align-items: center;
  font-size: 24rpx;
  width: 100%;
  z-index: 2;
}

.readed {
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 20rpx;
}

.readed .image {
  width: 34rpx;
  height: 24rpx;
}

.liked {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
}

.liked .image {
  width: 15px;
  height: 20px;

}
.pdl7 {
  padding-left: 7rpx;
}

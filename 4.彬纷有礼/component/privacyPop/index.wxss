/* component/privacyPop/index.wxss */
.privacy {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, .5);
  z-index: 9999999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.home-privacy-box{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, .5);
  z-index: 9999999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.content {
  width: 648rpx;
  min-height: 892rpx;
  background: linear-gradient(180deg, #ffe7dd, #ffffff 28%);
  border: 4rpx solid #ffddc4;
  border-radius: 52rpx;
  box-shadow: 0rpx 0rpx 18rpx 0rpx rgba(255, 255, 255, 0.99) inset;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding: 58rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  color: #6c6c6c;
}

.content .icon_privacy_shield {
  width: 110rpx;
  height: 172rpx;
}

.content .title {
  text-align: center;
  font-size: 40rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Bold;
  font-weight: 700;
  color: #000000;
}

.content .des {
  margin-top: 40rpx;
  text-align: justify;
  line-height: 1.6;

  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  color: #6c6c6c;
}

.content .des .link {
  color: #FF492D;
  /* text-decoration: underline; */
}

.btns {
  margin-top: 76rpx;
  display: flex;
  width: 100%;
}

.btns .item {

  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  box-sizing: border-box;
  border: none;
  width: 220rpx;
  height: 76rpx;
  border-radius: 40rpx;
  font-size: 36rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Bold;
  font-weight: 700;
  letter-spacing: 5.36rpx;
}

.btns .reject {
  background: #ffffff;
  border: 2rpx solid #b6b6b6;
  border-radius: 40rpx;
  color: #676767;
  font-weight: 400;
}

.btns .agree {
  background: #eb2c0e;
  color: #fff;
}
.content-page-home{
  min-height: 990rpx;
  padding: 38rpx 30rpx;
}
.btn-page-home{
  margin-top: 30rpx;
  z-index: 999;
}
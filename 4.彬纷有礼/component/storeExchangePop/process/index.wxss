/* component/storeExchangePop/process/index.wxss */
.process-box {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.exc-info-box {
  width: 602rpx;
  min-height: 122rpx;
  background: #fee7d8;
  border-radius: 14rpx;
  font-size: 28rpx;
  font-weight: 400;
  text-align: center;
  color: #000000;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
 
.color-red {
  font-size: 36rpx;
  font-weight: bold;
  color: #FD3520;
}

.color-green {
  font-size: 36rpx;
  font-weight: bold;
  color: #00A17C;
}

.exc-process {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
}

.exc-process .current-exc-box {
  font-size: 16rpx;
  font-weight: 400;
  text-align: center;
  color: #000000;
}

.prize-bar-box {
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.prize-bar-box .prize-item {
  box-sizing: border-box;
  font-size: 20rpx;
  font-weight: 400;
  text-align: center;
  color: #6a6a6a;
  display: flex;
  align-items: center;
}

.prize-item .coupon-num {
  font-size: 32rpx;
  font-weight: 700;
}

.prize-item .prize-num {
  color: #FD3520;
}

.prize-item .coupon-box {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.coupon-bar {
  width: 28rpx;
  height: 12rpx;
  background: #a78868;
  margin-top: 10rpx;
}

.coupon-bar-first {
  border-radius: 6rpx 0 0 6rpx;
}



.coupon-box .icon-coupon {
  width: 66rpx;
  height: 67rpx;
}

.prize-item .prize-min-box {
  font-size: 16rpx;
  font-weight: 400;
  text-align: center;
  color: #8b8b8b;
}

.prize-min-box .prize-min-num {
  font-size: 20rpx;
  font-weight: 700;
}

.prize-item-active .coupon-bar {
  background-color: #00A17C;
}

.prize-item-active .coupon-num-box {
  color: #fd3520;
}

.prize-item-active .prize-min-box {
  color: #00A17C;
}

.coupon-num-box-invisible {
  opacity: 0;
}



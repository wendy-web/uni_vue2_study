/* component/actDisplayPopup/dailyPop/index.wxss */
.container {
  background: #ffffff;
}

.daily-pop-box {
  width: 700rpx;
  /* background-color: #ffffff; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: scroll;
  box-sizing: border-box;
  padding-top: 30rpx;
}

.daily-pop-box-height {
  /* height: 990rpx; */
  height:93vh;
  padding-top: 0;
}

.daily-pop-box .unbox-pack {
  width: 100%;
  /* height: 512rpx; */
  background-repeat: no-repeat;
  background-size: 100% 100%;
  position: relative;
  padding-top: 70rpx;
  padding-bottom: 66rpx;
  box-sizing: border-box;
}

.daily-pop-box .unbox-pack .unbox-pop-title {
  position: absolute;
  top: -29rpx;
  left: 0rpx;
  right: 0rpx;
  margin: 0 auto;
  height: 100rpx;

}

.unbox-pack .unbox-pop-timer {
  font-size: 24rpx;
  font-weight: 400;
  text-align: center;
  color: #f5a262;
  letter-spacing: 0.43px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.unbox-pack .unbox-progress-box {
  margin: 0 30rpx 0 50rpx;

  box-sizing: border-box;
}

/* 开箱扫码按钮 */
.text-center {
  text-align: center;
}

.btn-scan-box {
  width: 272rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  opacity: 1;
  background: linear-gradient(0deg, #fd6913 0%, #fd2d0e 100%);
  border: 6rpx solid #ffffff;
  border-radius: 66rpx;
  box-shadow: 0 6px 8px rgba(151, 20, 0, 0.2);
  margin: 0 auto;
  font-size: 24rpx;
  color: #ffffff;
  padding: 0 14rpx;
}

/* 陈列每日弹窗 */
.display-pack {
  width: 100%;
  height: 484rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  position: relative;
  box-sizing: border-box;
}

.display-pack .connect-bar-box {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-top: -2rpx;
}

.connect-bar-box .item-bar {
  width: 20rpx;
  /* height: 70rpx; */
  height: 40rpx;
  background: linear-gradient(0deg, #ff3934 0%, #ff5535 100%);
}

.pop-content {
  background: linear-gradient(0deg, #fff7e2 0%, #ffffff 100%);
  height: 700rpx;
  width: 650rpx;
  /* width: 588rpx; */
  margin: 0 auto;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.act-display-btn {
  width: 259px;
  height: 65px;
  line-height: 59px;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  font-size: 18px;
  font-weight: 500;
  color: #ffe400;
  text-align: center;
  margin: 0 auto;
}

.step-box-width {
  min-width: unset;
  width: 590rpx;
  margin: 0 auto;
}

.display-pop-timer {
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  color: #3f150e;
  display: flex;
  align-items: center;
  
}


.icon-close {
  display: block;
  width: 56rpx;
  height: 56rpx;
  margin: 20rpx auto 0;
}
/* 去拍照按钮 */
.btn-take-photo {
  width: 344rpx;
  height: 78rpx;
  line-height: 78rpx;
  background: linear-gradient(0deg, #c82090 0%, #6a14d1 100%);
  border: 8rpx solid #ffffff;
  border-radius: 50rpx;
  box-shadow: 9rpx 9rpx 13rpx 0px rgba(151, 20, 0, 0.20);
  margin: 0 auto;
  color: #ffffff;
}
.no-progress-box {
  height: 512rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;

}
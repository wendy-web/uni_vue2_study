.unbox-pop-box {
  width: 700rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: scroll;
  box-sizing: border-box;
  padding-top: 30rpx;
}

.unbox-pop-box-win {
  width: 700rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  overflow: scroll;
  box-sizing: border-box;
  height: 678rpx;
  padding-top: 30rpx;
}

.unbox-pack {
  width: 100%;
  height: 484rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  position: relative;
  padding-top: 80rpx;
  box-sizing: border-box;
}
.display-lock-box{
  width: 100%;
  height: 484rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  position: relative;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.icon-ticker-tape {
  position: absolute;
  top: -199rpx;
  left: 0rpx;
  right: 0rpx;
  margin: 0 auto;
  height: 292rpx;
  z-index: 1;
  width: 100%;
}

.unbox-pack .unbox-pop-title {
  position: absolute;
  top: -29rpx;
  left: 0rpx;
  right: 0rpx;
  margin: 0 auto;
  height: 100rpx;
}

.unbox-pop-prize {
  font-size: 40rpx;
  font-weight: 700;
  text-align: center;
  color: #e21e00;
  letter-spacing: 0.67px;
}

.unbox-pop-prize .unbox-rev-num {
  font-size: 50rpx;
}

.unbox-pop-s-num {
  font-size: 28rpx;
  color: #1a1817;
  letter-spacing: 0.43px;
  text-align: center;
}

.unbox-pop-tips {
  font-size: 24rpx;
  text-align: center;
  color: #5f5857;
  letter-spacing: 0.43px;
  margin: 30rpx 0 20rpx 0;
}

.text-center {
  text-align: center;
}

.btn-to-use {
  width: 230rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  opacity: 1;
  background: linear-gradient(0deg, #fd6913 0%, #fd2d0e 100%);
  border: 6rpx solid #ffffff;
  border-radius: 66rpx;
  box-shadow: 0 6px 8px rgba(151, 20, 0, 0.2);
  margin: 0 auto;
  font-size: 24rpx;
  color: #ffffff;
  padding: 0 14rpx;
}

/* 未获奖 */
.unbox-fail-box {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding-bottom: 30rpx;
}

.unbox-fail-title {
  font-size: 36rpx;
  font-weight: 700;
  text-align: center;
  color: #1a1a1a;
  letter-spacing: 0.67px;
}

.unbox-fail-tips {
  font-size: 24rpx;
  text-align: center;
  color: #5f5857;
  letter-spacing: 0.43px;
}

.display-lock-title {
  font-size: 33rpx;
  font-weight: 700;
  text-align: center;
  color: #E21E00;
}

.icon-close {
  display: block;
  width: 56rpx;
  height: 56rpx;
  margin: 20rpx auto 0;
}
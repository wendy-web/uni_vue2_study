/* pages/storeDisplay/component/promotion/signConfirm/index.wxss */
.sign-confirm-box{
  width: 610rpx;
  background-color: #ffffff;
  border-radius: 10px;
  box-sizing: border-box;
  padding: 0 20rpx 56rpx;
}
.sgmb-title{
  font-size: 40rpx;
  font-weight: 700;
  color: #000018;
  text-align: center;
  height: 160rpx;
  line-height: 160rpx;
}
.tips{
  font-size: 28rpx;
  font-weight: 400;
  color: #000018;
  text-align: center;
}
.tools{
  display: flex;
  justify-content:space-between;
  margin-top: 80rpx;
  padding: 0 20rpx;
}
.tools-btn{
  width: 240rpx;
  height: 80rpx;
  border-radius: 20px;
  text-align: center;
  line-height: 80rpx;
}

.tools-btn.info{
  font-size: 32rpx;
  font-weight: 400;
  color: #636266;
  border: 1rpx solid #636266;

}
.tools-btn.sign{
  font-size: 32rpx;
  font-weight: 400;
  color: #ffffff;
  background-color: #E3001B;
  border: 1rpx solid #E3001B;
}

.close{
  width: 56rpx;
  height: 56rpx;
  display: block;
  margin: 60rpx auto 0;
}
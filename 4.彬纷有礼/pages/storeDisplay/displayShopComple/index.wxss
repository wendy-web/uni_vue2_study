/* pages/storeDisplay/displayShopComple/index.wxss */
page{
  background-color: #f5f5f5;
}
.dsc-head{
  height: 188rpx;
  background-image: linear-gradient(135deg,#ffa786 1%, #ff534f 97%);
  box-sizing: border-box;
  padding-top: 40rpx;
  padding-bottom: 100rpx;
  padding-left: 18rpx;
  display: flex;
  justify-content: space-between;
}
.dsc-dis-info{
  display: flex;
  align-items: center;
}
.ice-box{
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}
.dis-name{
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
}
.look-record{
  font-size: 24rpx;
  font-weight: 400;
  color: #ffdf00;
  padding-right: 25rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.dsc-content{
  position: absolute;
  top: 110rpx;
  left: 20rpx;
  right: 20rpx;
  bottom:0;
  height: auto;
  width: auto;
}

.basic-info{
  background: #ffffff;
  border-radius: 6px;
  padding: 40rpx;
  margin-bottom: 20rpx;
}
.photo-require,.dis-require{
  padding-bottom: 22rpx;
  border-bottom: 1rpx dashed rgba(112,112,112,.5);
  margin-bottom: 20rpx;
}
.photo-require-title{
  font-size: 28rpx;
  font-weight: 700;
  color: #000018;
}
.photo-require-details{
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
}
.prd-stress{
  color: #e3001b;
  margin-top: 12rpx;
}
.dis-goods{
  margin-top: 10rpx;
  height: 92rpx;
  width: 100%;
  white-space: nowrap;
}
.goods-icon{
  width: 92rpx;
  height: 92rpx;
  filter: brightness(0.9);
}
.goods-icon+.goods-icon{
  margin-left: 34rpx;
}
.dis-photograph{
  background: #ffffff;
  border-radius: 6px;
  padding: 40rpx 40rpx 100rpx;
  margin-bottom: 60rpx;
  position: relative;
}

.dis-shop-info{
  position: relative;
  min-height: 72rpx;
  padding-left: 128rpx;
}

.shop-icon{
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}
.shop-name{
  font-size: 28rpx;
  font-weight: 700;
  color: #000018;
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.shop-address{
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.day-info{
  margin-top: 30rpx;
  display: flex;
  align-items: center;
}
.day-num{
  color: rgba(0,0,24,0.90);
  font-size: 28rpx;
  font-weight: 700;
  margin-right: 20rpx;
}
.day-text{
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
}
.photograph-item{
  padding: 20rpx 0;
}
.photograph-item+.photograph-item{
  border-top: 1rpx dashed #707070;
}
.standard-name{
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
  padding-bottom: 20rpx;
}
.photograph-item-box{
  display: flex;
  align-items: center;
  font-size: 0;
}
/* .standard-icon{
} */
.photo-shot-item{
  text-align: center;
  margin-left: 18rpx;
}
/* .photograph-item-icon{
} */
.shot{
  width: 88rpx;
  height: 88rpx;
  margin-left: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.photo-shot-status{
  font-size: 24rpx;
  font-weight: 300;
  color: #e3001b;
}
.qualified{
  color: rgba(0,175,41,1);
}
.unqualified{
  color: rgba(227,0,27,1);
}
/* .standard-icon{} */
/* .photograph-item-icon{} */
.dis-shot-status-icon{
  width: 216rpx;
  height: 216rpx;
  position: absolute;
  top: 90rpx;
  right: 40rpx;
  z-index: 1;
}

.apply-review{
  width: 630rpx;
  margin: 74rpx auto 0;
}

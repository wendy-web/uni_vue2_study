/* pages/storeDisplay/component/showGoodsModal/index.wxss */
.show-dis-goods-box{
  width: 610rpx;
  height: 802rpx;
  background-color: #ffffff;
  border-radius: 10px;
  box-sizing: border-box;
  padding: 0 56rpx 56rpx;
}
.sgmb-title{
  font-size: 40rpx;
  font-weight: 700;
  color: #000018;
  text-align: center;
  height: 160rpx;
  line-height: 160rpx;
}

.sgmb-content-box{
  height: 506rpx;
}
.goods-item{
  position: relative;
  height: 112rpx;
  padding-left: 136rpx;
  padding-top: 10rpx;
  margin-bottom: 44rpx;
}
.goods-icon{
  position: absolute;
  left: 0;
  top: 0;
  width: 122rpx;
  height: 122rpx;
}
.goods-name{
  font-size: 28rpx;
  font-weight: 400;
  color: #000000;
}
.attr-str{
  font-size: 24rpx;
  font-weight: 400;
  color: #797979;
}
.attr-text{
  margin-right: 10rpx;
}
.close{
  width: 56rpx;
  height: 56rpx;
  display: block;
  margin: 60rpx auto 0;
}
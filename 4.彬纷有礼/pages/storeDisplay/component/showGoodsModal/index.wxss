/* pages/storeDisplay/component/showGoodsModal/index.wxss */
.show-goods-modal-box{
  width: 610rpx;
  height: 802rpx;
  background-color: #ffffff;
  border-radius: 10px;
  box-sizing: border-box;
  padding: 0 56rpx 56rpx;
}
.sgmb-title{
  font-size: 40rpx;
  font-weight: 700;
  color: #000018;
  text-align: center;
  height: 160rpx;
  line-height: 160rpx;
}
.package-name{
  height: 80rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: #000018;
}
.sgmb-content-box{
  height: 506rpx;
}

.goods-box{
  /* border-bottom: 1px dashed #707070; */
}

.goods-item{
  position: relative;
  height: 112rpx;
  padding-left: 136rpx;
  padding-top: 10rpx;
  margin-bottom: 44rpx;
}
.goods-icon{
  position: absolute;
  left: 0;
  top: 0;
  width: 122rpx;
  height: 122rpx;
}
.goods-name{
  font-size: 28rpx;
  font-weight: 400;
  color: #000000;
}
.attr-str{
  font-size: 24rpx;
  font-weight: 400;
  color: #797979;
}
.attr-text{
  margin-right: 10rpx;
}
.goods-rep-list{
  padding-top: 40rpx;
  border-top: 1px dashed #707070;
}
.goods-rep-item{
  display: flex;
  align-items: flex-end;
  font-size: 22rpx;
  font-weight: 400;
  color: #666666;
  margin-bottom: 20rpx;
}
.rep-icon{
  width: 30rpx;
  height: 50rpx;
}
.rep-text{
  margin: 0 15rpx;
}

.close{
  width: 56rpx;
  height: 56rpx;
  display: block;
  margin: 60rpx auto 0;
}
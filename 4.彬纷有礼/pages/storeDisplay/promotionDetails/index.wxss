/* pages/storeDisplay/promotionDetails/index.wxss */
.promotion-details{
  padding: 30rpx 30rpx 100rpx;
}
.promotion-date{
  font-size: 32rpx;
  font-weight: 700;
  color: #000018;
}
.pur-list-title,.dis-list-title{
  font-size: 32rpx;
  font-weight: 700;
  color: #000018;
  padding: 20rpx 0 26rpx;
}
.pur-list-th,.pur-list-tr,.dis-list-th,.dis-list-tr{
  display: flex;
}
.pur-list-tr{
  background-color: #FFFAFA;
}
.dis-list-tbody{
  background: linear-gradient(135deg,rgba(255,143,199,.05), rgba(149,194,253,.05));
}
.pur-list-th{
  background-image: linear-gradient(128deg,#ffd8dd 5%, #ffe8d9 95%);
  border-radius: 6px 6px 0px 0px;
  padding: 12rpx 0;
}
.dis-list-th{
  background-image: linear-gradient(135deg,rgba(255,143,199,.35), rgba(149,194,253,.35));
  border-radius: 6px 6px 0px 0px;
  padding: 12rpx 0;
}
.pur-list-th-cell,.pur-list-tr-cell,.dis-list-th-cell,.dis-list-tr-cell{
  width: 25%;
  flex-shrink: 0;
}
.pur-list-th-cell,.dis-list-th-cell{
  font-size: 24rpx;
  font-weight: 400;
  color: #000018;
  text-align: center;
}
.pur-list-tr-cell,.dis-list-tr-cell{
  position: relative;
  padding: 8rpx;
  box-sizing: border-box;
}

.pur-list-tr-cell+.pur-list-tr-cell::after,.dis-list-tr-cell+.dis-list-tr-cell::after{
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  border-left: 1rpx dashed #CCCCCC;
}
.pltc-r{
  margin-right: 5rpx;
}

.dis-list-tr{
  border-bottom:1rpx  dashed #CCCCCC;
}

.pur-name{
  font-size: 22rpx;
  font-weight: 400;
  color: #000018;
}

.pltc-text-center{
  text-align: center;
}

.channel-item{
  font-size: 18rpx;
  font-weight: 400;
  color: #999999;
}
.purchase-many-require-box,.purchase-require-box,.execution-box{
  background-color: #f9e6e7;
  border-radius: 6px;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
  padding-bottom:10rpx;
}

.prb-many-item{
  display: flex;
  justify-content: center;
  align-items: center;
}
.pmi-many-shop-icon,.huirang-info-icon,.dis-huirang-icon{
  width: 26rpx;
  height: 56rpx;
  margin-right: 5rpx;
}
.pmi-many-need-num{
  font-size: 20rpx;
  font-weight: 400;
  color: #ff3d1f;
}
.prb-many-item{
  display: flex;
  justify-content: center;
  align-items: center;
}
.pmi-shop-icon{
  width: 26rpx;
  height: 56rpx;
}
.pmi-need-num{
  text-align: center;
  font-size: 20rpx;
  font-weight: 400;
  color: #666666;
}
.pmi-good-need-item{
  font-size: 20rpx;
  font-weight: 400;
  color: #666666;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}
.pmi-gni-icon{
  width: 26rpx;
  height: 56rpx;
  margin: 0 4rpx;
}
.pmi-gni-num{
  color: #FF3D1F;
}

.huirang-box{
  min-height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
  padding:10rpx;
}

.huirang-info{
  display: flex;
  align-items: flex-end;
  font-size: 20rpx;
  font-weight: 400;
  color: #ff3d1f;
  margin-bottom: 5rpx;
}
.huirang-completed-dis{
  font-size: 20rpx;
  font-weight: 400;
  color: #666666;
}
.execution-box{
  padding: 10rpx;
  text-align: center;
}
.complete-info{
  font-size: 20rpx;
  font-weight: 400;
  color: #000018;
}
.dis-complete-info{
  font-size: 24rpx;
}

.returned-securities{
  font-size: 20rpx;
  font-weight: 500;
  color: #625ACD;
  text-align: left;
}
.no-standard{
  font-size: 20rpx;
  font-weight: 400;
  color: #e3001b;
}
.sait-send-securities{
  font-size: 20rpx;
  font-weight: 400;
  color: #F55B21;
}

.pur-dis-box{
  padding: 8rpx;
  background-color: #FFFAFA;
  overflow: hidden;
}

.pur-dis-show{
    width: 248rpx;
    height: 50rpx;
    background-color: #dbc4f0;
    border-radius: 13px;
    text-align: center;
    line-height: 50rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #000018;
    margin-top: 15rpx;
    float: right;
}
.pur-dis-show-text{
  margin-right: 10rpx;
}

.pur-dis-list{
  border-radius: 10rpx;
  overflow: hidden;
  clear: both;
}
.pdl-th,.pdl-tr{
  display: flex;
  align-items: center;
}
.pdl-th{
  background-color: #dbc4f0;
}
.pdl-tr{
  background-color: #F2EAF9;
}
.pdl-th-cell,.pdl-tr-cell{
  flex: 1 1 0;
  padding: 10rpx 0;
  text-align: center;
}
.pdl-th-cell2,.pdl-tr-cell2{
  flex: 2 1 0;
  padding: 10rpx 0;
  text-align: center;
}
.pdl-th-cell,.pdl-th-cell2{
  font-size: 24rpx;
  font-weight: 400;
  color: #000018;
}
.dis-min-num{
  font-size: 16rpx;
  font-weight: 400;
  color: #666666;
}
.pdl-tr+.pdl-tr{
  border-top:1rpx  dashed #CCCCCC;
}

.pdl-dis-name{
  font-size: 24rpx;
  font-weight: 400;
  color: #000018;
}
.pdl-dis-label{
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
}
.pdl-dis-link{
  font-size: 24rpx;
  font-weight: 400;
  color: #000018;
}
.pdl-completed-num{
   color: #00AF29;
}

.closed-line{
  border-bottom: 1rpx dashed #CCCCCC;
  background-color: #FFFAFA;
}

.dis-name{
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(0,0,24,0.90);
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dis-standard-box{
  background-color: rgba(240,230,249,1);
  border-radius: 6px;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.dis-good-icons{
  font-size: 0;
}
.dis-gicon{
  width: 26rpx;
  height: 56rpx;
}

.dis-label{
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
  padding: 10rpx;
}

.dis-huirang{
  height: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 400;
  color: #ff3d1f;
}

.dis-execution-box{
  min-height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.partake-result-title{
  font-size: 32rpx;
  font-weight: 700;
  color: #000018;
  margin-top: 15rpx;
}

.partake-result-box{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 26rpx 0;
}

.partake-result-box-item{
  width: 180rpx;
  height: 150rpx;
  border-radius: 6px;
  box-shadow: 0px 6px 12px 0px rgba(0,0,0,0.16); 
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.result-ok{
  background-image: linear-gradient(180deg,#f9fcf9, #f1fff5);
}
.result-bad{
  background-image: linear-gradient(180deg,#fff6f6, #ffebeb);
}
.result-huirang{
  background-image: linear-gradient(180deg,#fcfdff, #e0f4ff);
}
.result-text{
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(0,0,24,1);
}
.result-ok .result-text{
  color: #00af29;
}
.result-bad .result-text{
  color: rgba(227,0,27,1);
}
.result-title{
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
  margin-top: 20rpx;
}


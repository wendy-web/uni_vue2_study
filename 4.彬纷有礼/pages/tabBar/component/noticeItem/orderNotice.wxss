/* pages/tabBar/component/noticeItem/index.wxss */
.box {
  flex: 1;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  z-index: 1;
  align-self: stretch;
  flex-shrink: 0;
  height: 100%;
  overflow: hidden;
}

.order-box {
  box-sizing: border-box;
  /* background-color: #ff7f50; */
  flex: 1;
  align-self: stretch;
  height: 100%;
}

.list-item {
  background-color: #ffffff;
  margin: 0rpx 62rpx 0rpx 62rpx;
  box-sizing: border-box;
  padding: 20rpx 0rpx;
  border-bottom: 1rpx dashed #999;
}

.list-title {
  color: #333;
  font-weight: 600;
  font-size: 28rpx;
}

.list-date {
  font-size: 14px;
  padding-top: 4px;
  color: grey;
}

.list-msg {
  font-size: 26rpx;
  font-weight: 400;
  text-align: left;
  color: #000000;
  letter-spacing: 0px;
}
.text-red {
  color: #d90000;
}
.text-yellow {
  color: #fcd132;
}
.text-green {
  color: #079f01;
}
.empty-img {
  width: 428rpx !important;
  height: 428rpx !important;
}

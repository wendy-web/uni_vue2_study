/* pages/zhongduan/niuniuParadise.wxss */
page {
  width: 100%;
  height: 100%;
}

.niuniu-paradise {
  width: 100%;
  height: 100%;
  background: url('https://file.y1b.cn/public/img/nnly/miniProgram/bg.png');
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.niuniu-paradise>.niuniu-paradise-head {
  position: fixed;
  top: 12px;
  left: 0;
  right: 0;
  margin: auto;
  height: 287rpx;
}

.niuniu-paradise>.niuniu-paradise-btn {
  position: fixed;
  bottom: 15%;
  width: 128px;
  height: 40px;
  left: 0;
  right: 0;
  margin: auto;
}



@keyframes move {
  0%, 100%{
    transform: scale(1);
  }
  50%{
    transform: scale(1.2);
  }
  
  0%,
  65% {
    transform: rotate(0deg);
  }

  70% {
    transform: rotate(6deg);
  }

  75% {
    transform: rotate(-6deg);
  }

  80% {
    transform: rotate(6deg);
  }

  85% {
    transform: rotate(-6deg);
  }

  90% {
    transform: rotate(6deg);
  }

  95% {
    transform: rotate(-6deg);
  }

  100% {
    transform: scale(1.5);
    transform: rotate(0deg);
  }
}

.btn-shake {
  animation: move 1s 0s infinite;
  animation-timing-function: ease-in-out;
  transform-origin: bottom;
  display: block;
  margin: 50px auto;
}
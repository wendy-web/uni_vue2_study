  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
}
.pop-content .img-video-poster {
  width: 92%;
  height: 398rpx;
  border-radius: 24rpx;
  margin-top: 20rpx;
}
.pop-content .btn-video {
  width: 518rpx;
  height: 138rpx;
  line-height: 120rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  font-size: 36rpx;
  font-weight: 500;
  color: #ffe400;
  text-align: center;
  margin-top: 24rpx;
}
.pop-content .btn-disabled {
  width: 452rpx;
  height: 81rpx;
  line-height: 75rpx;
  background: #b9a492;
  border-radius: 52rpx;
  font-size: 38rpx;
  font-weight: 500;
  color: #ffffff;
  text-align: center;
}
.act-prize-box {
  background-repeat: no-repeat;
  background-size: 100% 100%;
  width: 227px;
  height: 165px;
  position: relative;
  text-align: center;
}
.act-prize-box .act-prize-title {
  font-size: 22px;
  font-weight: 500;
  color: #ffffff;
}
.act-prize-box .act-prize-text {
  font-size: 20px;
  font-weight: 500;
  color: #fe3c13;
}
.act-prize-box .num24 {
  font-weight: 700;
  font-size: 50px;
}
.act-prize-tips {
  font-size: 30rpx;
  font-weight: 500;
  color: #3F150E;
}
.act-display-apply-btn {
  width: 259px;
  /* height: 119rpx;
  line-height: 105rpx; */
  height: 65px;
  line-height: 59px;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  font-size: 18px;

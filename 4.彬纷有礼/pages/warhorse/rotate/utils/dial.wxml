<template name="dial" >
  <view class="dial_wp">
  	<block	wx:if = "{{mode == 1}}">
	    <image src = "{{rotatebg}}"/>
	    <view class="dial_pointer" style="-webkit-transform:rotate({{deg}}deg) translateZ(0);transform:rotate({{deg}}deg) translateZ(0)" bindtap="start"><image src = "{{pointer}}" /></view>
	</block>
	<block	wx:if = "{{mode == 2}}">
	    <image src = "{{rotatebg}}" style="-webkit-transform:rotate({{deg}}deg) translateZ(0);transform:rotate({{ deg}}deg) translateZ(0)"/>
	    <view class="dial_pointer" bindtap="start"><image src = "{{pointer}}" /></view>		
	</block>
  </view>
</template> 
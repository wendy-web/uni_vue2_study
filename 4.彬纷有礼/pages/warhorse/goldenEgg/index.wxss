  font-size: 41rpx;
  font-weight: 800;
  color: #fde63a;
  letter-spacing: 9px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  left:0;
  right: 0;
  bottom: 118rpx;
  z-index: 2;
}
.footer{
  background: url(https://file.y1b.cn/public/img/WarHorse/0917/goldenEgg/footer.png) no-repeat;
  background-size: 100% 100%;
  height: 521rpx;
  width: 100%;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}



.rewardPop {
  z-index: 2;
  width: 632rpx;
  height: 713rpx;
  background-image: url(https://file.y1b.cn/public/img/WarHorse/0917/rotate/reward_bg_front.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  position: fixed;
  left: 0;
  right: 0;
  bottom:280rpx;
  margin: auto;
}

.rewardPop_content {
  background-image: url(https://file.y1b.cn/public/img/WarHorse/0917/goldenEgg/reward_content.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  width: 632rpx;
  height: 713rpx;
  position: fixed;
  left: 0;
  right: 0;
  bottom:280rpx;
  margin: auto;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:flex-start ;
  
}

.rewardPop_content .msg {
  font-size: 51rpx;
  font-weight: 700;
  text-align: center;
  color: #CA0000;
  margin-top: 200rpx;
}

.rewardPop_content .msg text {
  font-size: 80rpx;
}

.flex-column-around {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.flex-column-between {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.height52{
  height: 52%;
}
.getReward{
  position: fixed;
  bottom: 16%;
  z-index: 5000;
  left: 0;
  right: 0;
  margin: auto;
}
.rewardHistory{
  margin-top: 40rpx;
  color: #FFE777;
  font-size:30rpx;
}
.getReward .btn {
  background-image: url(https://file.y1b.cn/public/img/WarHorse/0917/btnBG.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  width: 327rpx;
  height: 94rpx;
  font-size: 30rpx;
  font-weight: 700;
  text-align: center;
  color: #ffe300;
}

.totalMoney {
  color: #CA0000;
  font-weight: 700;
}

.lotteryPop {
  background-image: url(https://file.y1b.cn/public/img/WarHorse/0917/goldenEgg/count_bg.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  width: 594rpx;
  height:930rpx;
  background-color: transparent;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  padding-bottom: 70rpx;
}



@keyframes hammer {
  0%{
    transform: rotate(30deg);
  }
  33%{
    transform: rotate(0deg);
  }
  66% {
    /* transform: rotate(50deg); */
    transform: rotate(90deg);
  }
  100%{
    transform: rotate(0deg);
  }
}
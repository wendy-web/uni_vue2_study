}
.hammer{
  display: inline-block;
  position: fixed;
  right: 96rpx;
  /* bottom: 674rpx; */
  bottom: 618rpx;
  z-index: 12;
  animation-name: hammer;
  animation-duration: .6s;
  animation-fill-mode: both;
  transform-origin: bottom right;
  transform: rotate(30deg);
}
.hammer image{
  height:330rpx;
  width: 340rpx;
  /* height:157rpx;
  width: 298rpx; */
  transform: rotateZ(-30deg);
}

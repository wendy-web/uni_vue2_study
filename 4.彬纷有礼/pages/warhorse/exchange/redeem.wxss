/* pages/warhorse/exchange/redeem.wxss */
page {
  background: #f5f5f5;
}

.exc-box {
  padding: 20rpx;
  height: calc(100vh - var(--top));
  box-sizing: border-box;
}

.exc-box .exc-item {
  background-color: #fff;
  height: 100%;
  padding: 54rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}

.exc-item .exc-info {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-bottom: 20rpx;
  border-bottom: 1rpx dashed #b6b4b4;
}

.exc-info .img-zm-cans {
  width: 54rpx;
  height: 144rpx;
}
.exc-info .img-hn-cans{
  width: 88rpx;
  height: 132rpx;
}
.exc-info .exc-info-total {
  margin-left: 48rpx;
}

.exc-info-total .exc-available {
  font-size: 56rpx;
  font-weight: 700;
  color: #000000;
}

.exc-info-total .exc-name {
  font-size: 32rpx;
  color: #777777;
}
.exc-title{
  font-size: 32rpx;
  font-weight: 400;
  color: #000000;
  margin-top: 45rpx;
  margin-bottom: 20rpx;
}

.stepper-minus{
  margin: 0px!important;
  background-color: #ffffff!important;
  border-width:unset!important;
  border: 0.5rpx solid #707070!important;
  border-right: none!important;
}
.stepper-input{
  margin: 0px!important;
  border: 0.5rpx solid #707070!important;
  background-color: #ffffff!important;
  border-width:1rpx!important;
  font-size: 48rpx!important;
  font-weight: 700;
  color: #000000;

}
.stepper-plus{
  margin: 0px!important;
  background-color: #ffffff!important;
  border-width:unset!important;
  border: 0.5rpx solid #707070!important;
  border-left: none!important;
}
.exc-remain{
  font-size: 24rpx;
  color: #777777;
  margin-top: 20rpx;
}
.exc-remain-num{
  font-size: 28rpx;
  color: #000000;
}
.exc-tips{
  margin-top: 78rpx;
  font-size: 24rpx;
  color: #ff711f;
  text-align: center;
}
.exc-operate{
  text-align: center;
}
.exc-btn{
  margin-top: 14rpx;
}
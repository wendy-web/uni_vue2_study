.head-box{
  height: 396rpx;
  position: fixed;
  left: 0rpx;
  right: 0rpx;
  width: auto;
  margin-top: 15rpx;
}
.banner-box{
  position: relative;
  box-sizing: border-box;
  height: 100%;
  z-index: 2;
}
.img-banner-bg{
  position: absolute;
  top: 0;
  left: 0;
  height: 396rpx;
  width: 100%;
  z-index: -2;
}
.img-banner{
  position: absolute;

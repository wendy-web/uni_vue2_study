}


.stores-record-query {
  padding: 0 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  position: fixed;
  height: 118rpx;
  background-color: #f4f4f4;
  width: 100%;
  box-sizing: border-box;
  left: 0;
  /* top: 396rpx; */
  top: 470rpx;
  padding-bottom: 10rpx;
  z-index: 10;
}
.exc-title{
  font-size: 28rpx;
  font-weight: 700;
  color: rgba(0,0,24,0.90);
}
.filter-box{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.drop-box{
  width: 150rpx;
  height: 45rpx;
  border-radius: 8rpx 8rpx 0px 0px;
  font-size: 24rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  position: relative;
}
.excPop{
  background-color: #ffffff;
}
.drop-title{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60rpx;
}
.drop-title .icon-delta-down{
  width: 20rpx;
  height: 12rpx;
  margin-left: 10rpx;
}
.drop-content{
  background-color: #ffffff;
  height: 0;
  overflow: hidden;
  transition:all 0.5s;
  position: absolute;
  width: 150rpx;
  top: 45rpx;
}

.drop-content-show{
  height: auto;
}
.drop-item{
  font-size: 24rpx;
  color: rgba(97,97,97,0.90);
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}
.drop-item:nth-child(1){
  border-bottom: solid 0.5rpx #e9e9e9;
}

.stores-record-query .iconfont {
  margin-right: 10rpx;
}


.list-box {
  position: fixed;
  /* top: 510rpx; */
  top: 600rpx;
  bottom: 0;
  width: 100%;
}


.list-item {
  padding: 0 30rpx 30rpx 30rpx;
  /* margin-bottom: 30rpx; */
  margin-top: 20rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: grey;
  line-height: 34rpx;
  position: relative;

}
.list-item::after{
  content:'';
  position: absolute;
  bottom: 0;
  left:30rpx;
  right:30rpx;
  height: 1px;
  border-bottom: 1rpx dashed #b1b1b1;
}
.center-info{
  padding-left: 15rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}


/* pages/storeAllowance/cashorCoupon/component/pop/index.wxss */
.cash-box {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  position: relative;
  width: 700rpx;
  height: 700rpx;
  z-index: 1;
  padding-top: 0rpx;
  overflow: hidden;
  border-radius: 46rpx;
}

.cash-box .pop-bg-cash {
  width: 664rpx;
  height: 641rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  margin: auto;
  z-index: -1;
}

.cash-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cash-info-title {
  font-size: 44rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: center;
  color: #232323;
  display: flex;
  align-items: center;
  margin-top: 50rpx;
}

.icon-success {
  width: 48rpx;
  height: 48rpx;
  margin-left: 10rpx;
}

.cash-info .cash-info-num-box {
  line-height: 160rpx;
  font-size: 98rpx;
  font-family: Alimama ShuHeiTi, Alimama ShuHeiTi-Bold;
  font-weight: 700;
  text-align: center;
  color: #f51e19;
  display: flex;
  align-items: baseline;
}

.cash-info-num-box .icon-rmb {
  width: 58rpx;
  height: 71rpx;
}

.cash-info-num-box .num {
  font-size: 138rpx;
  font-family: Alimama ShuHeiTi, Alimama ShuHeiTi-Bold;
  font-weight: 700;
  color: #f51e19;
}

.operate-box {
  display: flex;
  align-items: center;
  justify-content: space-around;
  z-index: 2;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.operate-box .btn-check {
  width: 300rpx;
  height: 100rpx;
  font-size: 34rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Bold;
  font-weight: 700;
  text-align: center;
  color: #fff9f2;
}

.operate-box .btn-scan {
  width: 300rpx;
  height: 100rpx;
  font-size: 34rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Bold;
  font-weight: 700;
  color: #ffecd3;

}


.coupon-box {
  box-sizing: border-box;
  width: 678rpx;
  min-height: 720rpx;
  border-radius: 46rpx;
  padding: 0 40rpx;
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.coupon-box .bg-coupon-orange {
  position: absolute;
  z-index: -2;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.coupon-box .bg-coupon-yellow {
  position: absolute;
  z-index: -1;
  width: 640rpx;
  min-height: 680rpx;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  margin: auto;
}

.coupon-box .coupon-inner-box {
  /* background-color: brown; */
  width: 600rpx;
  min-height: 656rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;

}

.coupon-num-box {
  font-size: 44rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Bold;
  font-weight: 700;
  text-align: center;
  color: #000000;
  display: flex;
  align-items: baseline;
  box-sizing: border-box;
}

.gap-box {
  width: 616rpx;
  height: 43rpx;
  position: relative;
  z-index: 1;
}

.gap-box .bg-coupon-gap {
  width:100%;
  height: 43rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.gap-box .icon-line {
  width: 678rpx;
  height: 36rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.coupon-item-tips {
  font-size: 32rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: center;
  color: #000000;
  padding-bottom: 15rpx;
}

.coupon-item-tips .coupon-item-tips-num {
  color: #F51E19;
}

.coupon-exc-tips {
  font-size: 24rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: center;
  color: #ef3b13;
  margin-top: 20rpx;
}
.coupon-exc-tips:last-child{
  margin-top: 0rpx;
  
}

.coupon-item-num {
  font-size: 118rpx;
  font-family: Alimama ShuHeiTi, Alimama ShuHeiTi-Bold;
  font-weight: 700;
  color: #f51e19;
  line-height: 160rpx;
}

.type-title {
  width: 324rpx;
  height: 76rpx;
  line-height: 76rpx;
  background: #fde1c3;
  border-radius: 0rpx 0rpx 40rpx 40rpx;
  box-sizing: border-box;
  font-size: 38rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: center;
  color: #9f4f03;
}
.select-item .select-item-type {
  font-size: 36rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #706a61;
}

.select-item .select-item-title {
  font-size: 44rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #000018;
  margin-top: 40rpx;
}

.select-item .select-item-num {
  font-size: 44rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: bold;
  text-align: left;
  color: #FF3813;
}

.select-item .select-item-tips {
  font-size: 24rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #8b8b8b;
  margin-top: 32rpx;
}


/* radio 选项 end*/


.box .btn-confirm {
  width: 638rpx;
  height: 96rpx;
  line-height: 96rpx;
  background: #e3001b;
  border-radius: 48rpx;

  font-size: 36rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  color: #ffffff;
  margin: 0 auto;
}

/* 兑换成功弹窗 */
.pop-box {
  width: 600rpx;
  min-height: 586rpx;
  background: #ffffff;
  border-radius: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-top: 120rpx;
  padding-bottom: 60rpx;
  position: relative;
  z-index: -1;
}
.pop-box .pop-bg-green{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.pop-icon-success {
  width: 198rpx;
  height: 204rpx;
  margin: auto auto -136rpx auto;
  display: block;
  z-index: 3;
}

.pop-box .pop-content {
  margin-top: 44rpx;
}

.pop-box .exc-title {
  font-size: 44rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: center;
  color: #000018;
}

.pop-box .exc-num {
  font-size: 44rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: bold;
  color: #FF3813;
}

.operate-box {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.operate-box .exc-tips {
  font-size: 20rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: center;
  color: #727272;
}

.operate-box .operate-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #e3001b;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: center;
  color: #ffffff;
  margin-top: 18rpx;
}
.btn-disabled{
  background-color: #bdbdbd!important;
  opacity:1!important;
}
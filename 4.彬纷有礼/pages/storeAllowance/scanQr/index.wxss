/* pages/storeAllowance/scanQr/index.wxss */
page {
  min-height: 100%;
  overflow: hidden;
  background-color: #d72019;
}

/* 2022年1月20日 27周年改版 start */
.hn-box {
  position: relative;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
  height: 100vh;
}

.hn-box .hn-banner {
  width: 100%;
  height: 773rpx;
}

.hn-box .icon-hn-27th {
  width: 96rpx;
  height: 60rpx;
  position: absolute;
  top: 10px;
  left: 25px;
}

.hn-box .icon-hn-title {
  width: 321rpx;
  height: 195rpx;
  position: absolute;
  top: 0px;
  right: 73rpx;
}

.hn-box .hn-msgbox {
  background-repeat: no-repeat;
  background-size: 100% 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
  width: 660rpx;
  height: 558rpx;
}

.hn-box .hn-rule-box {
  width: 52rpx;
  height: 190rpx;
  background: #ee8f13;
  border-radius: 13rpx 0px 0px 13rpx;
  color: #ffffff;
  position: absolute;
  top: 45px;
  right: 0;
  z-index: 100;
  font-size: 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.text-vertical {
  width: 45rpx;
  line-height: 28rpx;
  text-align: center;
  word-wrap: break-word;
  /*英文的时候需要加上这句，自动换行*/
  word-break: break-all;
  margin-top: 5rpx;
}

.icon-question {
  width: 24rpx;
  height: 24rpx;
}

.hn-box .img-hn-foot {
  width: 100%;
  height: 72rpx;
  position: absolute;
  bottom: 0;
  z-index: 2;
}

.hn-msg-box {
  position: relative;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  /* justify-content: space-between; */
  justify-content: center;
}

.hn-msg-box .hn-msg-item {
  height: 336rpx;
  width: 100%;
  text-align: center;
  box-sizing: border-box;
  padding-top: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.hn-msg-box .hn-btn-box {
  height: 224rpx;
  box-sizing: border-box;
  padding-bottom: 35rpx;
  width: 100%;
  z-index: 5;
  display: flex;
  align-items: flex-end;
  justify-content: space-around;
  position: relative;
}

.hn-btn-box .btn-check {
  width: 274rpx;
  height: 90rpx;
}

.hn-msg-item .coupon-box {
  font-size: 22rpx;
  font-weight: 400;
  text-align: center;
  color: #f7df9e;
  /* background: linear-gradient(90deg, #f98b56, #da291e 95%); */
  width: 520rpx;
  margin: 0 auto;
  min-height: 230rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.coupon-box-failed {
  font-size: 32rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  width: 520rpx;
  margin: 0 auto;
  min-height: 210rpx;
  padding-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content:center;
  background-repeat: no-repeat;
  background-size: 100% 100%;

  color: #fff3d2;
}

.hn-msg-item .coupon-box .head {
  font-size: 54rpx;
  font-weight: 700;
  text-align: center;
  color: #fff709;
  margin-top: 10rpx;
}

.hn-msg-item .mgt20 {
  margin-top: 20rpx;
}

.coupon-box .head .coupon-money {
  font-size: 108rpx;
  font-weight: 800;
}

.coupon-box .foot-tips {
  font-size: 22rpx;
  font-weight: 400;
  text-align: center;
  color: #f7df9e;
  margin-top: -20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 400;
  text-align: center;
  color: #000018;
  letter-spacing: 4rpx;

}

.title .coupon-text {
  color: #C50202;
  font-weight: bolder;
  font-size: 48rpx;
  letter-spacing: 5rpx;
}

.tips {
  font-size: 20rpx;
  font-weight: 400;
  text-align: center;
  color: #000018;
  padding: 0rpx 50rpx;
}
.owner-tips{
  font-size: 28rpx;
  font-weight: 400;
  text-align: center;
  margin-top: 20rpx;
  color: #000018;
}


/* 自定义导航栏样式 */
.weui-navigation-bar__btn_goback {
  width: 40rpx;
  height: 40rpx;
}
/* 红牛28周年 */
.box-hn-28y{
  width: 100%;
  position: relative;
  box-sizing: border-box;
  margin-top: -50rpx;
}
.icon-hn-28y{
  width: 191rpx;
  height: 104rpx;
  position: absolute;
  top: 110rpx;
  left: 50%;
  transform: translateX(-50%);
}
.img-hn-banner-28y{
  width: 100%;
  height: 878rpx;
}
.img-hn-bg-28y{
  position: absolute;
  left: 24rpx;
  right: 24rpx;
  width: 700rpx;
  height: 847rpx;
  bottom: -705rpx;
  z-index: -1;
}

@media screen and (min-height: 737px) {
  .hn-banner {
    height: 853rpx;
  }

  .hn-box .icon-hn-27th {
    width: 120rpx;
    height: 75rpx;
    top: 10px;
    left: 15px;
  }

  .hn-box .icon-hn-title {
    width: 402rpx;
    height: 244rpx;
    right: 58rpx;
  }

  .hn-box .hn-msgbox {
    bottom: 0;
    width: 703rpx;
    height: 631rpx;
  }

  .hn-box .img-hn-foot {
    height: 95rpx;
  }

  .hn-msg-box .hn-btn-box {
    padding-bottom: 40px;
  }
}
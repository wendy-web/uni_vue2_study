.content .content-right {
  flex: 0.96;
  text-align: justify;
}

.act-rule-title-box {
  position: relative;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  height: 110rpx;
  font-size: 34rpx;
  font-weight: 700;
  color: #ffffff;
  z-index: 1;
  width: 100%;
}

.bg_act_explain {
  width: 490rpx;

/* pages/zhongduan/geren/notice/index.wxss */
page {
  height: 100%;
}

.page {
  padding-bottom: 100rpx;
  background-color: #f5f5f5;
  height: 100%;
}

.weui-panel {
  background-color: #f5f5f5;
}

.weui-panel__bd {
  background-color: white;
  margin: 30rpx 32rpx;
}

.weui-media-box {
  padding: 20rpx 30rpx;
}

.mt200 {
  margin-top: 200rpx;
}

.pdt200 {
  padding-top: 200rpx;
}

.title {
  font-size: 62rpx;
  font-weight: 600;
  color: rgba(0, 0, 0, 1);
  line-height: 44rpx;
}

.time {
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(160, 160, 160, 1);
  line-height: 28rpx;
}

.content {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 34rpx;
}

.line {
  height: 1px;
  margin: 10rpx 0px;
  border-top: 1px solid #F5F5F5;
}

.weui-panel::after {
  border-bottom: 0px;
}

.weui-media-box__desc {
  word-wrap: normal;
  word-break: normal;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 200;
  color: grey;

}

.weui-media-box__title {
  color: #333;
}
/* 红包记录 */
.balanceInfo .title {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
  line-height: 44rpx;
}

.balanceInfo .subtitle {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
}

.balanceInfo .create_time {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
}
.balanceInfo .green{
  color:rgba(109,212,0,1);
}
.balanceInfo .red{
  color:rgba(224,32,32,1);
}
.balanceInfo .weui-icon_msg{
  width: 24rpx;
  height: 24rpx;
}
.balanceInfo .weui-cell{
  padding: 20rpx 32rpx;
}
.balanceInfo .weui-cells{
  margin-top: 0px;
}
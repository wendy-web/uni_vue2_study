}

.code-sweeper,
.list-item-date,
.task-item,
.is-data-bottom {
  font-size: 24rpx;
  color: #707070;
}

.task-item-money {
  color: #E10404;
  margin-left: 10rpx;
}

.is-data-bottom {
  text-align: center;
  line-height: 60rpx;
}

.weui-half-screen-dialog__bd {
  -webkit-overflow-scrolling: touch
}

.animation-fade {
  animation-name: fade;
  animation-duration: .8s;
  animation-timing-function: linear;
  animation-fill-mode: both;
}

@keyframes fade {
  0% {
    opacity: 0
  }

  100% {
    opacity: 1
  }
}
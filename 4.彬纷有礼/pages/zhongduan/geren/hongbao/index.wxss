/* 余额记录筛选 */
.balance-record-query {
  padding: 0 45rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  height: 70rpx;
  width: 100%;
  box-sizing: border-box;
  left: 0;
}

.balance-record-query .iconfont {
  margin-right: 10rpx;
}

.right-tools-clerk,
.right-tools-type,
.date-select {
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
}

.date-select .date-icon {
  width: 30rpx;
  height: 30rpx;
}


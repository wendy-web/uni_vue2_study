.right-tools-clerk {
  margin-right: 50rpx;
}

.right-tools {
  display: flex;
  align-items: center;
}

.right-tools-clerk .iconrenqun {
  font-size: 40rpx;
}

.half-screen-list {
  display: flex;
  flex-wrap: wrap;
  max-height: 400rpx;
  overflow: auto;
}

.half-screen-item {
  text-align: center;
  font-size: 20rpx;
  color: #4F4F4F;
  width: 33.33%;
  margin-bottom: 10rpx;
}

.half-screen-item-img {
  width: 67rpx;
  height: 67rpx;
  border-radius: 50%;
}

.hongbao-record .weui-half-screen-dialog__ft {
  padding: 0;
}


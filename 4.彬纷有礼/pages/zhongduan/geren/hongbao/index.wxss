/* 新版UI 2021年5月6日 */
.hb-head {
  height: 334rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  font-size: 28rpx;
  color: #333;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.hb-head .hb-head-title {
  display: flex;
  align-items: center;
  color: #E10404;
}

.hb-head .hb-head-title .hb-head-hnIcon {
  width: 55rpx;
  height: 55rpx;
}

.hb-head .hb-head-money {
  color: #E10404;
  font-size: 28rpx;
  font-weight: 700;
}

.hb-head .hb-head-money .hb-head-num {
  font-size: 44rpx;
}

.hb-head .hb-head-count {
  display: flex;
  align-items: center;
}

.hb-head .hb-head-warnIcon {
  width: 26rpx;
  height: 26rpx;
}

.hb-head .hb-head-footer {
  display: flex;
  width: 100%;
  padding: 0 50rpx;
  margin-top: 26rpx;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-around;
  color: #333;
  font-size: 24rpx;
}

.hb-head-footer .hb-head-footer-item {
  flex: 1;
  text-align: center;
}

.hb-head-footer .hb-head-footer-money {
  font-size: 28rpx;
  color: #e10404;

}

.tipsPop {
  height: 420rpx;
  border-radius: 10rpx;
}

.tipsPop .tipsPop-title {
  margin-top: 70rpx;
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
}

.tipsPop .tipsPop-box {
  margin-top: 28rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #333;
}

.tipsPop .tipsPop-btn{
  display: inline-block;
  margin-top: 92rpx;
  width: 240rpx;
  height: 72rpx;
  background-color: #e13030;
  border-radius: 50rpx;
  text-align: center;
  line-height: 72rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}



/*空布局*/
.empty-view {
  position: fixed;
  width: 100%;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-size: 28rpx;
  color: #999;
}


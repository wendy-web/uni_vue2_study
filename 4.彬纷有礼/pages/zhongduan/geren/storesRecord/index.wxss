.swiper-box{
  width: auto;
  height: 330rpx;
  position: sticky;
  top: 0;
  left: 12rpx;
  right: 12rpx;
  width: auto;
}
.swiper{
  height: 330rpx;
  width: 100%;
}
.swiper-box .swiper-item{
  height: 330rpx;
  width: 100%;
}
.tips{
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  height: 70rpx;
  width: 100%;
  box-sizing: border-box;
  left: 0;
  top: 330rpx;
}
.stores-record-query {
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  height: 70rpx;
  width: 100%;
  box-sizing: border-box;
  left: 0;
  top: 330rpx;
  z-index: 10;
}
.stores-record-querys {
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  position: fixed;
  height: 70rpx;
  width: 100%;
  box-sizing: border-box;
  left: 0;
  top: 339rpx;
}

.stores-record-query .iconfont {
  margin-right: 10rpx;
}

.date-select {
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
}

.list-box {
  position: fixed;
  top: 400rpx;
  bottom: 0;
  width: 100%;
}
.list-boxs {
  position: fixed;
  top: 400rpx;
  bottom: 0;
  width: 100%;
}

.list-item {
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: grey;
  line-height: 34rpx;
}
.center-info{
  display: flex;
  justify-content: space-between;
}

.list-item-title{
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  line-height: 44rpx;
}

.play-money,
.play-user,
.is-data-bottom,
.not-written-off {
  font-size: 20rpx;
  color: #707070;
}

.is-data-bottom{
  text-align: center;
  line-height: 50rpx;
}

.play-money .money ,.not-written-off {
  color: #E10404;
}


.list-item-left{
  width: 65%;
}
.list-item-right{
  width: 35%;
}
.ellipsis{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/*空布局*/
.empty-view {
  position: fixed;
  width: 100%;
  top: 57%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-size: 24rpx;
  color: #999;
  transform: translateY(-50%);
}
.hbNoDataImg{
  height: 428rpx;
}
.lihr-text {
  color: #00CF23;
  font-size: 26rpx;
}
/* 底部弹窗选择类型 */
.iconSize image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.placeholder view {
  /* width: 80rpx; */
  width: 180rpx;
  text-align: center;
}

.placeholder {
  display: flex;
  align-items: center;
  flex-direction: column;
}
.flex_warp{
  flex-wrap: wrap;
}

.weui-half-screen-dialog__ft{
  display: none;
}
.mgt50{
  margin-top: 50rpx;
}
.fontSize22{
  font-size:22rpx
}
.color-red{
  color: #F60A00;
}
.date-icon{
  width: 30rpx;
  height: 30rpx;
}
/* 类型筛选 */
.drop-box{
  width: 150rpx;
  height: 45rpx;
  border-radius: 8rpx 8rpx 0px 0px;
  font-size: 24rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  position: relative;
}
.excPop{
  background-color: #ffffff;
}
.drop-title{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60rpx;
}
.drop-title .icon-delta-down{
  width: 20rpx;
  height: 12rpx;
  margin-left: 10rpx;
}
.drop-content{
  background-color: #ffffff;
  height: 0;
  overflow: hidden;
  transition:all 0.5s;
  position: absolute;
  width: 150rpx;
  top: 45rpx;
}

.drop-content-show{
  height: auto;
}
.drop-item{
  font-size: 24rpx;
  color: rgba(97,97,97,0.90);
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}
.drop-item:nth-child(1){
  border-bottom: solid 0.5rpx #e9e9e9;
}
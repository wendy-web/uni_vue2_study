page {
  height: 100vh;
  overflow: hidden;
}

button {
  position: relative;
  display: block;
  margin: 0px;
  padding-left: 0;
  padding-right: 0;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  text-align: left;
  text-decoration: none;
  line-height: normal;
  border-radius: 50rpx;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color: #000;
  background-color: white;
}

button:after {
  width: 0;
  height: 0;
  position: absolute;
  top: 0;
  left: 0;
  border: none;
  line-height: normal;
  -webkit-transform: scale(0.5);
  -ms-transform: scale(0.5);
  transform: scale(0.5);
  -webkit-transform-origin: 0 0;
  -ms-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  border-radius: 10rpx;
  background: white;
}

page {
  overflow: visible;
}
.animation-fade {
  animation-name: fade;
  animation-duration: .8s;
  animation-timing-function: linear;
  animation-fill-mode: both;
}

@keyframes fade {
  0% {
      opacity: 0
  }

  100% {
      opacity: 1
  }
}

/* newUI start 2021年4月22日17:03:43 */
.page-box{
  box-sizing: border-box;
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.navBarTitle {
  color: #ffffff;
  padding: 0px;
}
.income-head{
  height: 195px;
  box-sizing: border-box;
  background-position:top;
  background-repeat: no-repeat;
  background-size: 100% 136px;
  /* position: fixed;
  left: 0;
  right: 0;  */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: #fff;
  z-index: 9;
}
.income-head .income-refresh-box{
  height: 40rpx;
  margin-top: 15rpx;
  margin-right:20rpx;
  text-align: right;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 24rpx;
  color: #fff;
  z-index: 98;
}
.income-refresh-box .income-refresh{
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}
.income-head .income-title{
  margin-left: 54rpx;
  color: #fff;
  font-size: 28rpx;
  margin-bottom: 10px;
}
.income-head .income-money{
  margin:0 54rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
  margin-bottom: 10px;
  z-index: 99;

}
.income-head .income-money .money{
  font-size: 36rpx;
  font-weight: 700;
}
.income-head .income-money .income-withdrawal{
  width: 168rpx;
  height: 58rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 99;
}
.income-head .income-count{
  width: 100%;
  box-sizing: border-box;
  height: 72px;
  background-size: 100% 110%;
  /* height: 92px;
  background-size: 100% 100%; */
  background-repeat: no-repeat;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding:0 24rpx;
  color:#fff;
  font-size:24rpx;

}
.income-head .income-count .count-num{
  font-size: 32rpx;
}
.income-head .income-count .count-tx{
  border-left: 1rpx solid #fff;
  border-right: 1rpx solid #fff;
}
.income-head .income-count .count-item{
  display: flex;
  flex: 0.35;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 58px;
  /* padding-bottom: 8px; */
  box-sizing: border-box;
}
.income-count .count-item .count-tx{
  width: 100%;
  text-align: center;
}
.income-head .yuer-detail{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color:#333;
  padding:0 20rpx 0 40rpx;
}
.income-head .yuer-detail .check-more{
  font-weight: normal;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}
.yuer-detail .check-more .arrow{
  width: 10rpx;
  height: 20rpx;
  margin-left: 12rpx;
}
.list-box{
  /* margin-top: 205px;
  padding-bottom: 10vh; */
  box-sizing: border-box;
  flex-shrink: 0;
  flex: 1;
  display: flex;
  flex-direction: column;
  /* background-color: burlywood; */
}


/* newUI  end */



.weui-cells::before {
  border-top: 0px;
}

.weui-cells::after {
  border-bottom: 0px;
}

/* 红包记录 */
.balanceInfo{
  flex-shrink: 0;
  flex: 1;
}
.balanceInfo .title {
  font-size: 28rpx;
  color: #333;
}

.balanceInfo .subtitle {
  font-size: 24rpx;
  font-weight: 400;
  color: #707070;
  margin: 10rpx 0;
}

.balanceInfo .create_time {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
}

.balanceInfo .green {
  color: #00CF23;
}

.balanceInfo .red {
  min-height: 20px;
  color: #CF0000;
}

.balanceInfo .weui-icon_msg {
  width: 24rpx;
  height: 24rpx;
}

.balanceInfo .weui-cell {
  padding: 0;
  box-sizing: border-box;
}

.balanceInfo .weui-cells {
  width: 100%;
  margin-top: 0px;
  font-size: 28rpx;
}
.balanceInfo .noMore{
  color: #999;
  text-align: center;
  font-size: 20rpx;
}


.adContainer-bottom {
  width: 100%;

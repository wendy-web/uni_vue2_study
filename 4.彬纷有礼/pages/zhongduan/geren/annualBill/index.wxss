/* 日期选择器箭头 */
.head-box .navigator-arrow-down {
  margin-left: 10px;
  padding-right: 13px;
  position: relative;
  top: 0rpx;
}

.head-box .navigator-arrow-down:after {
  content: " ";
  display: inline-block;
  height: 15rpx;
  width: 15rpx;
  border-width: 0 1px 1px 0;
  border-color: #fff;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -6px;
  right: 10px;
}

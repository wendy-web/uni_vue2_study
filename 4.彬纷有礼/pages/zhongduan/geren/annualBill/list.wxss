/* pages/zhongduan/geren/annualBill/list.wxss */
.navBarTitle {
  color: white;
}

.top-bg {
  height: 120px;
  width: 100%;
  background: orange;
  position: fixed;
  top: 0;
  z-index: 1;
}

.main-bg {
  padding-top: 0px;
  width: 100%;
}

.header {
  background: #f5f5f5;
  height: 75px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  /* line-height: 25px; */
  padding-left: 36rpx;
  padding-right: 36rpx;
  font-size: 13px;
  position: sticky;
  /* top: 0rpx; */
  top: var(--navBarHeight);
}

.cell {
  background: white;
  height: 80px;
  line-height: 80px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-left: 36rpx;
  
}




.money {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  height: 100%;
  display: flex;
  align-items: center;
}


/* 日期选择组件 */
.picker-box {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size: 30rpx;
  width: 100%;
}

.pdr20 {
  padding-right: 20rpx;
}

.text-justify {
  text-align-last: justify;
  text-align: justify;
}

.width100px {
  width: 120px;
}

.navigator-arrow-down {
  margin-left: 10px;
  padding-right: 13px;
  position: relative;
  top: -5rpx;
}

.navigator-arrow-down:after {
  content: " ";
  display: inline-block;
  height: 9px;
  width: 9px;
  border-width: 0 1px 1px 0;
  border-color: #333333;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -4px;
  right: 14px;
}

/* list css */
.month {
  font-weight: 700;
  color: #242424;
  font-size: 35rpx;
}

.subtitle {
  font-size: 30rpx;
  font-weight: 500;
  text-align: left;
  color: #787878;
}

.pdl40 {
  padding-left: 40rpx;
}

.create-time {
  font-size: 24rpx;
  color: #4F4E4E;
  width: 100%;
  height: 15px;
  line-height: 15px;
}

.img {
  width: 84rpx;
  height: 84rpx;
}

.item {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 80px;
  padding-right: 36rpx;
  border-bottom:1rpx solid #e9e9e9;
}

.title-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 30px;
}

.title {
  font-size: 32rpx;
  font-weight: 400;
  text-align: left;
  color: #333;
  height: 100%;
  display: flex;
  align-items: center;
}
.align-center{
  display: flex;
  align-items: center;
  margin-right: 26rpx;
}
.noMore{
  padding-top: 20px;
  padding-bottom: 20px;
}
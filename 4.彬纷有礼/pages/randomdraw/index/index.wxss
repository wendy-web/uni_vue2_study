page {
  min-height: 100%;
  overflow: hidden;
  background-color: #d72019;
}

/* 2022年1月20日 27周年改版 start */
.hn-box {
  position: relative;
  box-sizing: border-box;
  display: flex;
  width: 100%;
  height: 100vh;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.hn-box .hn-banner {
  width: 100%;
  height: 773rpx;
}

.hn-box .icon-hn-27th {
  width: 96rpx;
  height: 60rpx;
  position: absolute;
  top: 10px;
  left: 25px;
}

.hn-box .icon-hn-title {
  width: 321rpx;
  height: 195rpx;
  position: absolute;
  top: 0px;
  right: 73rpx;
}

.hn-box .hn-msgbox {
  background-repeat: no-repeat;
  background-size: 100% 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
  width: 600rpx;
  height: 558rpx;
}

.hn-box .hn-rule-box {
  width: 52rpx;
  height: 190rpx;
  background: #ee8f13;
  border-radius: 13rpx 0px 0px 13rpx;
  color: #ffffff;
  position: absolute;
  top: 45px;
  right: 0;
  z-index: 100;
  font-size: 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.text-vertical {
  width: 45rpx;
  line-height: 28rpx;
  text-align: center;
  word-wrap: break-word;
  /*英文的时候需要加上这句，自动换行*/
  word-break: break-all;
  margin-top: 5rpx;
}

.icon-question {
  width: 24rpx;
  height: 24rpx;
}

.hn-box .img-hn-foot {
  width: 100%;
  height: 72rpx;
  position: absolute;
  bottom: 0;
  z-index: 2;
}

.hn-msg-box {
  position: relative;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  z-index: 10;
}

.hn-msg-item {
  height: 336rpx;
  width: 100%;
  text-align: center;
  /* flex: 0.6; */
  box-sizing: border-box;
  padding-top: 10rpx;
}

.hn-btn-box {
  height: 224rpx;
  box-sizing: border-box;
  padding-bottom: 20rpx;
  width: 100%;
  /* flex: 0.4; */
  z-index: 5;
  display: flex;
  align-items: flex-end;
  justify-content: space-around;
  position: relative;
}

.money {
  font-size: 56rpx;
  font-weight: 700;
  text-align: center;
  color: #fc271e;
  margin-top: -15rpx;
}

.cash {
  font-weight: 800;
  font-size: 108rpx;
}

.icon-hn-btn {
  width: 260rpx;
  height: 90rpx;
}

.gif-btn-watchvideo {
  width: 270rpx;
  height: 92rpx;
}

/* 2022年1月20日 27周年改版 end */

.title {
  color: #d38743;
  font-weight: 700;
  font-size: 50rpx;
  letter-spacing: 3rpx;
}


.goyuerBtn {
  display: inline-block;
  border-color: #ff0500;
  text-align: center;
  z-index: 1000;
  color: white;
  font-size: 28rpx;
  border-radius: 50rpx;
  /* padding: 10rpx 0rpx; */
  width: 114px;
  height: 35px;
  line-height: 35px;
  background: linear-gradient(0deg, #e60000, #e40001);
  -webkit-box-shadow: 0 8rpx 0 0 rgba(14, 13, 13, 0.562);
  box-shadow: 0 6rpx 0 0 rgba(14, 13, 13, 0.562);
}


/* 二次确认弹窗样式 */
.reconfirmPop {
  height: 680rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding-bottom: 10rpx;
}

.reconfirmPop .flex-box {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.reconfirmPop .flex-cloumn {
  display: flex;
  flex-direction: column;
}

.reconfirmPop .btn-group {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 25rpx;
}

.btn-group .btn-giveup {
  display: inline-block;
  text-align: center;
  z-index: 1000;
  color: white;
  font-size: 28rpx;
  border-radius: 50rpx;
  box-sizing: border-box;
  width: 250rpx;
  height: 83rpx;
  line-height: 83rpx;
  background: #cfb7a6;
}

/* 自定义导航栏样式 */
.weui-navigation-bar__btn_goback {
  width: 40rpx;
  height: 40rpx;
}

.img-hn-unopened {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  width: 600rpx;
  height: 558rpx;
  margin: 0 auto;
}


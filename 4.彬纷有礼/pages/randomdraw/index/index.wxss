@media screen and (min-height: 737px) {
  .hn-banner {
    height: 853rpx;
  }

  .hn-box .icon-hn-27th {
    width: 120rpx;
    height: 75rpx;
    top: 10px;
    left: 15px;
  }

  .hn-box .icon-hn-title {
    width: 402rpx;
    height: 244rpx;
    right: 58rpx;
  }

  .hn-box .hn-msgbox {
    bottom: 0;
    width: 666rpx;
    height: 666rpx;
  }

  .img-hn-unopened {
    width: 666rpx;
    height: 666rpx;
  }

  .hn-box .img-hn-foot {
    height: 95rpx;
  }

  .hn-btn-box {
    padding-bottom: 20px;
  }
}

/* 小屏显示 */
@media screen and (max-height: 700px) {

  .hn-rule-box-28y {
    bottom: 260rpx;
  }
}
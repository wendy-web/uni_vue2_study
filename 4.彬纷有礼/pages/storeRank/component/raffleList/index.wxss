/* pages/storeRank/component/raffleList/index.wxss */
.raffle-box {
  box-sizing: border-box;
  background-color: #ffffff;
}

.my-raffle-code-box {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 700;
  color: #000018;
  line-height: 58rpx;
  text-shadow: 0rpx 2rpx 0rpx 0rpx rgba(255, 255, 255, 0.50);
  position: relative;
  z-index: 2;
  box-sizing: border-box;
  padding-top: 20rpx;
}

.my-raffle-code-box .left-bar {
  width: 44rpx;
  height: 2rpx;
  background: linear-gradient(270deg, #ff3401, rgba(244, 50, 1, 0.00));
  margin-right: 16rpx;
}

.my-raffle-code-box .right-bar {
  width: 44rpx;
  height: 2rpx;
  background: linear-gradient(90deg, #ff3401, rgba(244, 50, 1, 0.00));
  margin-left: 16rpx;
}

.my-raffle-code-box .icon-raffle-win {
  width: 158rpx;
  height: 158rpx;
  position: absolute;
  right: 0;
  top: 0rpx;
  z-index: 1;
}

.my-raffle-code {
  margin-top: 20rpx;
  font-size: 50rpx;
  font-weight: 700;
  color: #ed302a;
  text-shadow: 0rpx 2rpx 0rpx 0rpx rgba(255, 255, 255, 0.50);
  display: flex;
  align-items: center;
  justify-content: center;
}

.my-raffle-code-item {
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  background: #ffffff;
  border: 1rpx solid #ed302a;
  border-radius: 8rpx;
  margin-left: 6rpx;
}

.lottery-box {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  font-size: 24rpx;
  font-weight: 400;
  color: #363636;
  letter-spacing: 1.27rpx;
  text-shadow: 0rpx 2rpx 0rpx 0rpx rgba(255, 255, 255, 0.50);
  box-sizing: border-box;
  margin-top: 28rpx;
}

.lottery-box .raffle-tips {
  font-size: 16rpx;
  font-weight: 400;
  color: #8a8a8a;
  text-shadow: 0rpx 2rpx 0rpx 0rpx rgba(255, 255, 255, 0.50);
}


.lottery-ball {
  display: flex;
  
}

.lottery-ball .img-ball-box {
  font-size: 20rpx;
  font-weight: 400;
  color: #ffffff;
  line-height: 36rpx;
  position: relative;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx;
  height: 48rpx;
  z-index: 1;
  padding-bottom: 14rpx;
}

.img-ball-box .img-ball {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.img-ball-box .text-black {
  color: #000000;
}


.raffle-code {
  box-sizing: border-box;
  flex: 1;
  flex-shrink: 0;
  font-size: 34rpx;
  font-weight: 400;
  text-align: left;
  color: #000000;
  text-shadow: 0rpx 2rpx 0rpx 0rpx rgba(255, 255, 255, 0.50);
  margin-left: 40rpx;
  letter-spacing: 0rpx;
}

.raffle-list-box {
  position: relative;
  box-sizing: border-box;
  min-height: 540rpx;
  background: #ffffff;
  border: 1rpx solid #ffa7a4;
  border-radius: 26rpx;
  margin-top: 15rpx;
}



.flex-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  font-weight: 400;
  color: #606060;
  text-shadow: 0rpx 2rpx 0rpx 0rpx rgba(255, 255, 255, 0.50);
  min-height: 76rpx;
  border-bottom: 0.4rpx dashed #fbefd0;
}

.flex-item .item-index {
  flex: 0.2;
  flex-shrink: 0;
  text-align: center;
}

.flex-item .item-shop {
  flex: 0.4;
  flex-shrink: 0;
  text-align: center;
  max-width: 300rpx;
}

.flex-item .item-num {
  flex: 0.4;
  flex-shrink: 0;
  text-align: right;
  padding-right: 38rpx;
  box-sizing: border-box;
}

.flex-item .item-time {
  font-size: 20rpx;
  font-weight: 400;
  text-align: right;
  color: #9f9f9f;
}

.flex-item:last-child {
  border-bottom: unset;
}

.list-head {
  box-sizing: border-box;
  height: 84rpx;
  background: #ffebeb;
  border-radius: 26rpx 26rpx 0rpx 0rpx;
  font-size: 24rpx;
  font-weight: 700;
  color: #000018;
  text-shadow: 0rpx 2rpx 0rpx 0rpx rgba(255, 255, 255, 0.50);
  border-bottom: unset;

}

.oneLine {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.my-lucky-item {
  background: #ffebeb;
  font-size: 24rpx;
  font-weight: 700;
  color: #e22d27;
  text-shadow: 0rpx 2rpx 0rpx 0rpx rgba(255, 255, 255, 0.50);
}

/* 抽奖规则 */
.raffle-rule-box {
  box-sizing: border-box;
  border: 1rpx solid #ffa7a4;
  border-radius: 26rpx;
  padding: 20rpx 19rpx 37rpx 37rpx;
  font-size: 20rpx;
  font-weight: 400;
  text-align: left;
  color: #606060;
  text-shadow: 0rpx 2rpx 0rpx 0rpx rgba(255, 255, 255, 0.50);
}

.rule-title {
  font-size: 24rpx;
  font-weight: 700;
  text-align: left;
  color: #000018;
  text-shadow: 0rpx 2rpx 0rpx 0rpx rgba(255, 255, 255, 0.50);
}

.no-data {
  font-size: 32rpx;
  color: #6d6d6d;
  letter-spacing: 1.7rpx;
  text-shadow: 0rpx 2rpx 0rpx 0rpx rgba(255, 255, 255, 0.50);
  box-sizing: border-box;
  background-color: #ffffff;
  text-align: center;
  margin-top: 260rpx;
}

.check-all-list {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  box-sizing: border-box;
  height: 50rpx;
  font-size: 20rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: right;
  color: #000018;
  text-shadow: 0rpx 2rpx 0rpx 0rpx rgba(255, 255, 255, 0.50);
}
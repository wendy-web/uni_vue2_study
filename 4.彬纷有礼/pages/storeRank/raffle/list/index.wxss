/* pages/storeRank/raffle/list/index.wxss */
page {
  position: relative;
  box-sizing: border-box;
  width: 100%;
  z-index: 1;
}
.box{
  display: flex;
  justify-content: center;
  box-sizing: border-box;
  padding-bottom: 20rpx;
  height: calc(100vh - var(--navBarHeight));
  position: relative;
}
.bg-luckynum-list {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.raffle-box {
  box-sizing: border-box;
  margin: 34rpx 20rpx;
  background: #fffdfd;
  border-radius: 24rpx;
  padding-top: 36rpx;
  flex: 1;
  display: flex;
  flex-direction: column;

}

.my-raffle-code-box {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 700;
  color: #000018;
  line-height: 58rpx;
  text-shadow: 0rpx 2rpx 0rpx 0rpx rgba(255, 255, 255, 0.50);
}

.my-raffle-code-box .left-bar {
  width: 44rpx;
  height: 2rpx;
  background: linear-gradient(270deg, #ff3401, rgba(244, 50, 1, 0.00));
  margin-right: 16rpx;
}

.my-raffle-code-box .right-bar {
  width: 44rpx;
  height: 2rpx;
  background: linear-gradient(90deg, #ff3401, rgba(244, 50, 1, 0.00));
  margin-left: 16rpx;
}

.my-raffle-code {
  margin-top: 20rpx;
  font-size: 50rpx;
  font-weight: 700;
  color: #ed302a;
  text-shadow: 0rpx 2rpx 0rpx 0rpx rgba(255, 255, 255, 0.50);
  display: flex;
  align-items: center;
  justify-content: center;
}

.my-raffle-code-item {
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  background: #ffffff;
  border: 1rpx solid #ed302a;
  border-radius: 8rpx;
  margin-left: 6rpx;
}

.my-raffle-tips {
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  color: #7a7a7a;
  line-height: 44rpx;
  text-shadow: 0rpx 2rpx 0rpx 0rpx rgba(255, 255, 255, 0.50);
  box-sizing: border-box;
  margin-top: 10rpx;
}





.img-ball-box .text-black {
  color: #000000;
}


.raffle-list-box {
  position: relative;
  box-sizing: border-box;
  background: #fffdfd;
  margin-top: 15rpx;
}



.flex-item {
  display: flex;
  align-items: center;
  /* justify-content: space-between; */
  font-size: 24rpx;
  font-weight: 400;
  color: #606060;
  text-shadow: 0rpx 2rpx 0rpx 0rpx rgba(255, 255, 255, 0.50);
  min-height: 76rpx;
  border-bottom: 0.4rpx dashed #efeeee;
}

.flex-item .item-index {
  flex: 0.1;
  text-align: center;
}

.flex-item .item-shop {
  flex: 0.3;
  flex-shrink: 0;
  text-align: center;
  max-width: 300rpx;
}

.flex-item .item-num {
  flex: 0.2;
  flex-shrink: 0;
  text-align: center;
  box-sizing: border-box;
}

.flex-item .item-time {
  font-size: 20rpx;
  font-weight: 400;
  color: #9f9f9f;
  flex: 0.4;
  flex-shrink: 0;
  text-align: center;
  box-sizing: border-box;
}

/* .flex-item:last-child {
  border-bottom: unset;
} */

.list-head {
  box-sizing: border-box;
  border-bottom: unset;
  height: 50rpx;
  background: #f16c55;
  font-size: 24rpx;
  font-weight: 700;
  color: #ffffff;
  line-height: normal;
  min-height: unset;
  margin-left: -15rpx;
  margin-right: -15rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  position: relative;
}
.list-head::before {
  content: "";
  display: inline-block;
  position: absolute;
  bottom: -15rpx;
  left: 0;
  width: 0;
  height: 0;
  border-left: 15rpx solid transparent;
  border-top: 15rpx solid #9D1E09;
}
.list-head::after {
  content: "";
  display: inline-block;
  position: absolute;
  bottom: -15rpx;
  right: 0;
  width: 0;
  height: 0;
  border-right: 15rpx solid transparent;
  border-top: 15rpx solid #9D1E09;
}
.list-head .head-time{
  flex: 0.4;
  flex-shrink: 0;
  text-align: center;
  box-sizing: border-box;
}
.oneLine {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.my-lucky-item {
  background: #ffebeb;
  font-size: 24rpx;
  font-weight: 700;
  color: #e22d27;
  text-shadow: 0rpx 2rpx 0rpx 0rpx rgba(255, 255, 255, 0.50);
}


.no-data {
  font-size: 32rpx;
  color: #6d6d6d;
  letter-spacing: 1.7rpx;
  text-shadow: 0rpx 2rpx 0rpx 0rpx rgba(255, 255, 255, 0.50);
  box-sizing: border-box;
  background-color: #ffffff;
  text-align: center;
  margin-top: 260rpx;
}
.pull-refresh-box{
  flex: 1;
  overflow: scroll;
  border-radius: 0rpx 0rpx 24rpx 24rpx;
}
.list-container{
  height: 100%;
  width: 100%;
  box-sizing: border-box;
}
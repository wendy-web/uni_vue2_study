/* pages/storeRank/prizeTicket/pop/index.wxss */
.confirm-box {
  box-sizing: border-box;
  width: 600rpx;
  min-height: 496rpx;
  background: #fffbfb;
  border-radius: 20rpx;
  margin-bottom: 280rpx;
  padding: 120rpx 30rpx 30rpx 30rpx;
}

.icon-box {
  text-align: center;
  margin-bottom: -130rpx;
  z-index: 1;
}

.icon-confirm {
  width: 218rpx;
  height: 218rpx;
}

.confirm-title {
  font-size: 36rpx;
  font-weight: 700;
  text-align: center;
  color: #000000;
}

.confirm-tips {
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #4e4e4e;
  line-height: 50rpx;
  margin-top: 30rpx;
}
.operate-box{
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.operate-btn {
  width: 240rpx;
  height: 80rpx;
  border-radius: 41rpx;
}
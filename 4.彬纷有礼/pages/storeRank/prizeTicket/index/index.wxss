/* pages/storeRank/prizeTicket/index/index.wxss */
page {
  background-color: #f3f3f3;
}

.prize-ticket-box {
  box-sizing: border-box;
  padding-bottom: 40rpx;
}

.banner-box {
  min-height: 340rpx;
  /* background: linear-gradient(122deg, #c2e9f1 13%, #26c0c9 53%, #c2e9f1 94%); */
  border-radius: 40rpx;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  margin-bottom: -10rpx;
}

.banner-box .banner-honor {
  height: 366rpx;
  width: 100%;
}

.banner-box .banner-item {
  box-sizing: border-box;
  width: 100%;
  min-height: 310rpx;
  background: linear-gradient(133deg, #84b2c0 7%, #e8f7fb 49%, #8cb7c5 99%);
  border-radius: 30rpx;
  position: relative;
  z-index: 1;
}

.banner-item .banner-tips {
  font-size: 20rpx;
  text-align: right;
  color: #f78a20;
  position: absolute;
  bottom: 22rpx;
  right: 54rpx;
  z-index: 3;
}

.prize-info {
  box-sizing: border-box;
  margin: 0 38rpx 20rpx 38rpx;
  min-height: 100rpx;
  position: relative;
  border-bottom: 1rpx dashed #bfbfbf;
  font-size: 36rpx;
  font-weight: 700;
  color: #000000;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.prize-info .unclaimed-box {
  width: 112rpx;
  height: 46rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  background-color: #ce141c;
  font-size: 24rpx;
  color: #ffffff;
  border-radius: 30rpx 30rpx 30rpx 0rpx;
  position: relative;
  top: -15rpx;
  left: 4rpx;
}

.prize-info .received {
  background-color: #00924e;
}

.explain {
  box-sizing: border-box;
  font-size: 24rpx;
  color: #4e4e4e;
  line-height: 36rpx;
  margin: 0 38rpx;
}

.explain .text-red {
  color: #CE141C;
}

.form-box {
  min-height: 645rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0rpx 6rpx 12rpx 0rpx #cecece;
  box-sizing: border-box;
  margin: 20rpx;
  padding: 10rpx 0;
}

.place-holder-style {
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #4e4e4e;
}

.van-cell:after {
  border-bottom-color: #b3b3b3 !important;
}

.form-item {
  padding: 8rpx 30rpx !important;
  min-height: 100rpx !important;
  display: flex;
  align-items: flex-end;

}

.id-card-tips {
  font-size: 20rpx;
  font-weight: 400;
  text-align: left;
  color: #9a9a9a;
  padding-left: 30rpx;
}

.prize-info-tips {
  font-size: 20rpx;
  text-align: left;
  color: #ce141c;
  margin: 10rpx 30rpx 0rpx 30rpx;

}

.received-box {
  box-sizing: border-box;
  font-size: 28rpx;
  font-weight: 700;
  color: #000000;
  margin: 0 32rpx;
}

.received-box .received-title {
  margin: 58rpx 0 20rpx 0;
}

.received-box .img-list {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.img-list .img-item {
  width: 118rpx;
  height: 144rpx;
  border-radius: 12rpx;
  margin-right: 70rpx;
  margin-bottom: 48rpx;
}

.img-item:last-child {
  margin-right: 0rpx;
}

.submit-box {
  box-sizing: border-box;
  margin: 70rpx 40rpx 40rpx 40rpx;
}
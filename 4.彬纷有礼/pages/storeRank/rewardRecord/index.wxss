  /* align-items: center; */
  /* padding-top: 145rpx; */
  padding-top: 9vh;
  padding-left: 60rpx;
  padding-right: 60rpx;
  box-sizing: border-box;
  position: relative;

}

.award-record-bg {
  position: absolute;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.bg-record {
  position: absolute;
  top: 0rpx;
  left: 14rpx;
  right: 14rpx;

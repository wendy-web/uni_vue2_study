/* 2023年4月15日 */
.mini-height {
  min-height: 400rpx;
  line-height: 400rpx;
}

.list-head {
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-weight: normal;
  padding-bottom: 10rpx;
  border-bottom: 1rpx dashed #DEB854;
  box-sizing: border-box;
  text-align: center;

  font-size: 24rpx;
  font-weight: 700;
  color: #000018;
  text-shadow: 0rpx 2rpx 0rpx 0rpx rgba(255, 255, 255, 0.50);

}

.list-item {
  font-size: 24rpx;
  color: #333334;
  border-bottom: 1rpx dashed #DEB854;
  box-sizing: border-box;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: space-around;
  min-height: 68rpx;
  box-sizing: border-box;
}

.record-title {
  color: #FFFFFF;
  font-size: 48rpx;
  font-weight: 800;
  text-align: center;
  position: absolute;
  top: 40rpx;
  left: 0;
  right: 0;
  z-index: 2;
  height: 9%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.award-record-icon {
  width: 116rpx;
  height: 114rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 3;
}

/* 2023年8月1日 */
.tab-box {
  display: flex;
  align-items: flex-start;
  justify-content: space-around;
  background-color: #ffffff;
  height: 100rpx;
  box-sizing: border-box;
  position: sticky;
  top: 0;
  padding-top: 10rpx;
  z-index: 10;
}

.tab-box .tab-item {
  flex: 1;
  flex-shrink: 0;
  text-align: center;
  background-color: unset;
  border-bottom: 8rpx solid #FFFFFF;
  border-bottom-width: 50%;
  position: relative;
  font-weight: 400;
  color: #000000;
  text-shadow: 0rpx 2rpx 0rpx 0rpx rgba(255, 255, 255, 0.50);
  font-size: 24rpx;
}

.tab-box .active-tab {
  background-color: #FFFFFF;
  /* color: #FFFFFF; */
  color: #ff3401;
  font-weight: 800;


}

.tab-item::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 70rpx;
  height: 8rpx;
  background-color: var(--bg-color);
  border-radius: 4rpx;
}

.raffle-box {
  margin-top: 20rpx;
  background-color:#ffffff;
}
.act-ing{
  color: #F17701;
}
.act-end{
  color: #2EAC6D;
}

.act-fail{

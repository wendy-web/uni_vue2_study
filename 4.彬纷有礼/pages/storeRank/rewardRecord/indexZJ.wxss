.container {
  background-color: #d02423;
  height: calc(100vh - var(--navBarHeight));
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 100rpx;
  padding-left: 60rpx;
  padding-right: 60rpx;
  box-sizing: border-box;
  position: relative;

}

.bg-record {
  position: absolute;
  top: 0;
  left: 14rpx;
  right: 14rpx;
  bottom: 20rpx;
  width: 96vw;
  height: 100%;
  z-index: 1;
}

.navBarTitle {
  color: #ffffff;
}

.content {
  height: 63vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  z-index: 2;
}

.font30 {
  font-size: 30rpx;
}

.fontBold {
  font-weight: 600;
}

.color-black {
  color: #000000;
}

.borderBottom {
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #DBBF72;

}

.list {
  flex: 1;
}

.list .scroll {
  height: 100%;
}

.noMore {
  color: #796E4F;
  font-size: 25rpx;
}


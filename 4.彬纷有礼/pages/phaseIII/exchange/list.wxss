/* pages/phaseIII//exchange/list.wxss */
@import '../common.wxss';
page {
  background: #f4f4f4;
}

.list {
  padding: 34rpx 27rpx;
}

.list .item {
  height: 428rpx;
  padding: 27rpx 70rpx 53rpx 70rpx;
  background: #ffffff;
  border-radius: 42rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.item button:after{
  border: none;
}
.orderNum {
  color: #ec0000;
}

.list .item .remind {
  width: 241rpx;
  height: 76rpx;
  line-height: 76rpx;
  font-size: 24rpx;
  background: linear-gradient(180deg, #ff0000 2%, #a90000);
  border-radius: 42rpx;
  color: #ffffff;
}

.list .item .cancel {
  width: 241rpx;
  height: 76rpx;
  line-height: 76rpx;
  font-size: 24rpx;
  background: linear-gradient(180deg, #dcdcdc 3%, #7f7f7f);
  border-radius: 42rpx;
  color: #ffffff;
}

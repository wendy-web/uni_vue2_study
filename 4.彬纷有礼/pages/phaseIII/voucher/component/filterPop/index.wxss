/* pages/voucher/component/filterPop/index.wxss */

.box {
  box-sizing: border-box;
  /* height: 100vh; */
  z-index: 10;
}

.filter-pop {
  padding-bottom: 0 !important;
}

.filter-title {
  font-size: 36rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: center;
  color: #000000;
  line-height: 52rpx;
}

.filter-subtitle {
  font-size: 32rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Medium;
  font-weight: 600;
  text-align: left;
  color: #000000;
  line-height: 52rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.icon_close_box {
  text-align: right;
  box-sizing: border-box;
  padding-right: 28rpx;
  padding-bottom: 10rpx;
}

.icon_close {
  width: 36rpx;
  height: 36rpx;
}

.exc-filter-box {
  box-sizing: border-box;
  background-color: #ffffff;
  padding: 30rpx 30rpx 20rpx 30rpx;
  border-radius: 40rpx 40rpx 0 0;
  /* max-height: 1120rpx;
  overflow: scroll; */
}
.filter-box{
  flex: 1;
  flex-shrink: 0;
  overflow: scroll;
  max-height: 1000rpx;

}
.date-range-box {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  box-sizing: border-box;
  margin-bottom: 40rpx;
  justify-content: space-around;
}

.date-range-item {
  margin-right: 10rpx;
  box-sizing: border-box;
  min-width: 164rpx;
  height: 70rpx;
  background: #f6f6f6;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;

  font-size: 26rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  color: #4a4a4a;
}

.date-range-select-item {
  padding: 0 30rpx;
}

.date-range-item:last-child {
  margin-right: 0rpx;
}

.select-gap {
  width: 10px;
  height: 1rpx;
  background-color: #4a4a4a;
}

.good-select-box {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
  margin-bottom:30rpx ;
}
/* .good-select-box:last-child{
  margin-bottom: 30rpx;
} */
.good-name {
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #000000;
  margin-bottom: 30rpx;
  
}

.good-select-item {
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
  min-width: 164rpx;
  height: 70rpx;
  background: #f6f6f6;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;

  font-size: 26rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  color: #4a4a4a;
}

.good-select-item:last-child {
  margin-right: 0rpx;
}

.date-item-active {
  font-size: 26rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  color: #e3001b;
  background: #ffecee;
  border: 1rpx solid #e3001b;
}

.operate-box {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-bottom: 30rpx;

}

.operate-item {
  box-sizing: border-box;
  text-align: center;
  width: 300rpx;
  height: 96rpx;
  line-height: 90rpx;
  border: 2rpx solid #939393;
  border-radius: 50rpx;

  font-size: 36rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #181818;
}

.operate-item-confirm {
  background-color: #E3001B;
  border: 2rpx solid #E3001B;
  color: #FFFFFF;
}
.mt-40{
  margin-top: 40rpx;
}
/* 换购券过期弹窗提示 start */
.voucherExpPop{
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  width: 680rpx;
}
.expPop-box {
  background-color: #fff;
  border-radius: 40px;
  padding: 4px;
  box-sizing: border-box;
}

.voucherExpPop .expPop-content {
  border: 2rpx solid #facdad;
  border-radius: 40px;
  height: 100%;
  padding: 25px 17px;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  box-sizing: border-box;
  background-color: #fff9e5;
}

.color-orange {
  color: #ff2e00;
}

.expPop-content .expPop-title {
  font-size: 56rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  color: #000000;
  text-align: center;
}

.subtitle {
  font-size: 38rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #ff2e00;
  text-align: center;
}

.expPop-voucher {
  margin-top: 30rpx;
  background: #fee2e2;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 12rpx 6rpx;
  width: 100%;
}

.expPop-voucher .icon-voucher {
  height: 140rpx;
  width: 100%;
}

.expPop-detail {
  font-size: 13px;
  font-weight: 500;
  margin-top: 30rpx;
  width: 100%;
  background-image: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAkcAAABNAQMAAACWiVL7AAAABlBMVEUAAAD/LgAQ+IQOAAAAAnRSTlMAXvpAscsAAAAkSURBVFjD7cIxDQAACAMwHODfDcI4MMG1tGkBAAAAAJBle34eauQsBTUcJbcAAAAASUVORK5CYII=");
  background-repeat: repeat-y;
  background-size: 100% 60rpx;
  color: #000000;
  text-align: justify;
  line-height: 60rpx;
  box-sizing: border-box;
  padding: 0 5px;
}



.expPop-btn {
  margin-top: 60rpx;
  width: 322rpx;
  height: 112rpx;
}

.expPop-slogan {
  position: absolute;
  bottom: 5px;
  right: 2px;
  width: 166rpx;
  height: 110rpx;
  z-index: 10000;
}
.icon-close {
  z-index: 10;
  height: 74rpx;
  width: 74rpx;
  display: block;
  margin: 30rpx auto 0 auto;
}
/* 换购券过期弹窗提示 end */

.safeArea {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

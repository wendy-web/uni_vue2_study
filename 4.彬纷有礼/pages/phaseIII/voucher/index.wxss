/* pages/voucher/voucher.wxss */

page {
  height: 100%;
  box-sizing: border-box;
}

.page-box {
  display: flex;
  flex-direction: column;
  flex: 1;
  height: 100%;
  width: 100%;
  background-color: #ffffff;
}

.tab-coupon-box {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.tab-coupon-item {
  position: relative;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  color: #000000;
}

.tab-coupon-title {
  position: relative;
  box-sizing: border-box;
}

.tab-coupon-title::after {
  content: '';
  position: absolute;
  bottom: -3px;
  left: 0;
  right: 0;
  margin: 0 auto;
  width: 100%;
  height: 8rpx;
  border-radius: 45rpx;
  /* background-color:#e3001b; */
  background-color: #ffffff;
}

.tab-active {
  color: #E3001B;
}

.tab-active::after {
  background-color: #e3001b;
}

.tab-coupon-item .tab-count-info {
  width: 48rpx;
  height: 30rpx;
  background: #fe324b;
  border-radius: 16rpx 16rpx 16rpx 0rpx;
  position: absolute;
  right: -50rpx;
  top: 10rpx;


  font-size: 20rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #ffffff;
  text-align: center;
}

.tab-exc-item {
  margin-top: 16rpx;
}

.tab-exc-item::after {
  height: 6rpx;
  width: 50rpx;
}

.tab-exc-title::after {
  height: 6rpx;
  width: 60rpx;
}

.swiper-box {
  flex: 1;
  overflow: hidden;
  /* background-color: tan; */
}

.swiper-item {
  touch-action: pan-y;
}

.footer-box {
  min-height: 176rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 30rpx;
  z-index: 10;
  max-height: 176rpx;
}

.footer-box .coupon-stat-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  color: #676767;
  line-height: 46rpx;

}

.icon_coupon_data {
  width: 50rpx;
  height: 50rpx;
}

.footer-box .coupon-use-box {
  box-sizing: border-box;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #e3001b;
  width: 332rpx;
  height: 96rpx;
  border-radius: 48rpx;

  font-size: 36rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #ffffff;
  line-height: 36rpx;
}

.footer-box .coupon-use-grey {
  background-color: #939393;

}

.coupon-use-box .coupon-expire-tips {
  position: absolute;
  top: -24rpx;
  right: -20rpx;
  background-color: #ffffff;
  border-radius: 48rpx 48rpx 48rpx 0;
  font-size: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #e3001b;
  width: 154rpx;
  height: 42rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  color: #e3001b;
}
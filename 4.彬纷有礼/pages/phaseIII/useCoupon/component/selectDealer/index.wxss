/* pages/phaseIII/useCoupon/component/selectDealer/index.wxss */
.box {
  box-sizing: border-box;

}

/* 选择经销商弹窗 start*/
.select-dealer-pop {
  padding-bottom: 0 !important;
}

.icon_close_box {
  text-align: right;
  box-sizing: border-box;
  padding-right: 28rpx;
  padding-bottom: 10rpx;
}

.icon_close {
  width: 36rpx;
  height: 36rpx;
}

.empty-img {
  width: 428rpx !important;
  height: 428rpx !important;
}

.dealer-box {
  box-sizing: border-box;
  background-color: #f6f6f6;
  padding: 30rpx 30rpx 20rpx 30rpx;
  border-radius: 40rpx 40rpx 0 0;
  min-height: 1000rpx;
}

.title {
  height: 50rpx;
  font-size: 36rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: center;
  color: #181818;
}

.search-item {
  background: #f6f6f6;
  border: 1rpx solid #d5d5d5;
  border-radius: 33rpx;
  padding-left: 20rpx;
}

.list-box {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  max-height: 60vh;
  overflow: scroll;
}

.list-item-hn {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  background: #ffffff;
  border-radius: 16rpx;
  box-sizing: border-box;
  padding: 16rpx 20rpx;
  margin-bottom: 20rpx;
  flex-shrink: 0;
}

.list-item {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  background: #ffffff;
  border-radius: 16rpx;
  box-sizing: border-box;
  padding: 16rpx 20rpx;
  margin-bottom: 20rpx;
  flex-shrink: 0;

}

.dealer-title {
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: left;
  color: #000000;
}

.dealer-contact {
  display: inline-flex;
  align-items: center;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: left;
  color: #1592E6;
  margin-top: 10rpx;
}
mr-30{
  margin-right: 30rpx;
}
.dealer-mobile {
  margin-right: 20rpx;
}

.icon_call {
  width: 26rpx;
  height: 26rpx;
}

.btn-select {
  box-sizing: border-box;
  width: 158rpx;
  height: 48rpx;
  /* border: 2rpx solid #e10404; */
  background-color: #e10404;
  border-radius: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;

  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  color: #ffffff;
}

.dealer-address-box {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  box-sizing: border-box;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #676767;
  flex: 1;
}

.dealer-address {
  flex: 0.8;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.dealer-distance {
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: right;
  color: #000000;
  flex: 0.2;
  flex-shrink: 0;
}

.select-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.set-default {
  display: flex;
  align-items: center;
  flex: 0.2;
  flex-shrink: 0;

  font-size: 20rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #000000;
}

.icon-circle {
  width: 12rpx;
  height: 12rpx;
  border: 2rpx solid #707070;
  border-radius: 50%;
  box-sizing: border-box;
  margin-right: 10rpx;
}

.icon-circle-active {
  border: 2rpx solid #e10404;
  background-color: #e10404;
}
.tag-default {
  background-color: #e3001b;
  box-sizing: border-box;
  padding: 4rpx 20rpx;
  font-size: 20rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  color: #ffffff;
  border-radius: 0rpx 20rpx 0 20rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.tag-last-send{
  background-color: #03c48a;
}

/* 选择经销商弹窗 end*/
.safeArea {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
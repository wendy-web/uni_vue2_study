/* pages/voucher/component/filterPop/index.wxss */

.box {
  box-sizing: border-box;
  /* height: 100vh; */
  z-index: 10;
}

.filter-pop {
  padding-bottom: 0 !important;
}

.filter-title {
  font-size: 36rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: center;
  color: #000000;
  line-height: 52rpx;
}

.filter-subtitle {
  font-size: 32rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Medium;
  font-weight: 600;
  text-align: left;
  color: #000000;
  line-height: 52rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.icon_close_box {
  text-align: right;
  box-sizing: border-box;
  padding-right: 28rpx;
  padding-bottom: 10rpx;
}

.icon_close {
  width: 36rpx;
  height: 36rpx;
}

.exc-filter-box {
  box-sizing: border-box;
  background-color: #ffffff;
  padding: 30rpx 30rpx 20rpx 30rpx;
  border-radius: 40rpx 40rpx 0 0;
  display: flex;
  flex-direction: column;

}
.filter-box{
  flex: 1;
  flex-shrink: 0;
  overflow: scroll;
  max-height: 1000rpx;

}
.date-range-box {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  box-sizing: border-box;
  margin-bottom: 40rpx;
  justify-content: space-around;
}

.date-range-item {
  margin-right: 10rpx;
  box-sizing: border-box;
  min-width: 164rpx;
  height: 70rpx;
  background: #f6f6f6;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;

  font-size: 26rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  color: #4a4a4a;
  border: 1rpx solid #f6f6f6;
}

.date-range-select-item {
  padding: 0 30rpx;
}

.date-range-item:last-child {
  margin-right: 0rpx;
}

.select-gap {
  width: 10px;
  height: 1rpx;
  background-color: #4a4a4a;
}

.good-select-box {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
  margin-bottom:30rpx ;
}
.good-select-box:last-child{
  margin-bottom: 0rpx;
}
.good-name {
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #000000;
  margin-bottom: 30rpx;
  
}

.good-select-item {
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
  min-width: 164rpx;
  height: 70rpx;
  background: #f6f6f6;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;

  font-size: 26rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  color: #4a4a4a;
}

.good-select-item:last-child {
  margin-right: 0rpx;
}

.date-item-active {
  font-size: 26rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  color: #e3001b;
  background: #ffecee;
  border: 1rpx solid #e3001b;
}

.operate-box {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-bottom: 30rpx;

}

.operate-item {
  box-sizing: border-box;
  text-align: center;
  width: 300rpx;
  height: 96rpx;
  line-height: 90rpx;
  border: 2rpx solid #939393;
  border-radius: 50rpx;

  font-size: 36rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #181818;
}

.operate-item-confirm {
  background-color: #E3001B;
  border: 2rpx solid #E3001B;
  color: #FFFFFF;
}
.mt-40{
  margin-top: 40rpx;
}

.crew-item{
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}
.safeArea {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
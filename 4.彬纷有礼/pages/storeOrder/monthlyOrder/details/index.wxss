/* pages/storeOrder/monthlyOrder/details/index.wxss */
page{
  background-color: #F7F7F7;
}
.order-status{
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
}
.order-status-icon{
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}
.order-status-text{
  font-size: 28rpx;
  font-weight: 400;
  text-align: center;
}
.delivery-info{
  padding: 30rpx 40rpx;
  background-color: #ffffff;
  margin:10rpx 0;
}
.dii-label{
  font-size: 28rpx;
  font-weight: 500;
  color: #797979;
}
.dii-value{
  font-size: 28rpx;
  font-weight: 500;
  color: #000000;
}

.place-order-info{
  background-color: #ffffff;
}

.order-delivery-info{
  padding: 20rpx 30rpx;
  position: relative;
}


.order-delivery-info::before{
  content: '';
  position: absolute;
  left: 50rpx;
  top: 40rpx;
  height: 62rpx;
  border-left: 1px dashed  #A3A2A8;
  transform: translateX(-50%);
}

.odi-order,.odi-delivery{
  display: flex;
  align-items: center;
}
.odi-order{
  margin-bottom: 22rpx;
}

.odi-icon{
  width: 40rpx;
  height: 40rpx;
  position: relative;
  z-index: 1;
}

.odi-label{
  font-size: 24rpx;
  color: #a3a2a8;
  margin: 0 10rpx;
}
.odi-name{
  font-size: 24rpx;
  color: #000018;
}

.shop-info{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx 50rpx;
}

.shop-one-info{
  padding: 0 30rpx 50rpx 250rpx;
  position: relative;
  height: 200rpx;
  box-sizing: border-box;
}

.soi-icon{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  left: 30rpx;
  top: 0;
  filter: brightness(0.9);
  border-radius: 5px;
}

.soi-name{
  font-size: 26rpx;
  color: #000;
}
.soi-attr,.soi-price,.soi-num{
  font-size: 24rpx;
  color: #a3a2a8;
}

.gpi-left-goods{
  font-size: 0;
  display: flex;
  align-items: center;
}
.gpi-lg-icon{
  width: 120rpx;
  height: 120rpx;
  filter: brightness(0.9);
  border-radius: 5px;
}
.gpi-lg-icon+.gpi-lg-icon{
  margin-left: 10rpx;
}

.gpi-lg-more{
  color:  #a3a2a8;
  font-size: 40rpx;
  letter-spacing: 6rpx;
  margin-left: 10rpx;
}

.goods-total{
  position: relative;
  font-size: 28rpx;
  text-align: right;
  color: #a3a2a8;
  padding-right: 40rpx;
}

.goods-total-arrow{
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

.goods-price-total,.goods-price-yh{
  font-size: 24rpx;
  font-weight: 400;
  text-align: left;
  color: #797979;
  display: flex;
  justify-content: space-between;
  padding: 0 80rpx 0 30rpx;
  margin-bottom: 10rpx;
  margin-top: 10rpx;
}

.goods-price-xjj{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 80rpx 0 30rpx;
  margin-bottom: 10rpx;
}

.gpi-right-label{
  font-size: 24rpx;
  color: #a3a2a8;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.gpi-right-value{
  text-align: right;
  min-width: 140rpx;
}

.discount,.cash-coupon{
  font-size: 24rpx;
  font-weight: 400;
  color: #fd2b1e;
}
.coupons-icon{
  width: 30rpx;
  height: 30rpx;
  margin-right: 5rpx;
}

.goods-price-yf{
  font-size: 28rpx;
  font-weight: 700;
  color: #000000;
  text-align: right;
  padding-right: 80rpx;
  padding-bottom: 30rpx;
}

.price-red{
  color: #E3001B;
}

.order-type-info{
  background-color: #ffffff;
  padding: 20rpx 40rpx 220rpx;
  margin-top: 10rpx;
}

.oti-item{
  display: flex;
  align-items: center;
}

.oti-item.justify{
  justify-content: space-between;
}

.oti-label{
  font-size: 28rpx;
  font-weight: 500;
  color: #797979;
}

.oti-value{
  font-size: 28rpx;
  font-weight: 500;
  color: #000000;
  display: flex;
  align-items: center;
}

.oti-copy-icon{
  width: 25rpx;
  height: 25rpx;
  margin-left: 10rpx;
}

.split-line{
  border-top: 1rpx dashed #bbb6b6;
  padding-top: 30rpx;
  margin-top: 30rpx;
}

.address{
  padding-left: 140rpx;
  position: relative;
  min-height: 1em;
}

.remarks{
  padding-left: 80rpx;
  position: relative;
  min-height: 1em;
}
.remarks .oti-label,.address .oti-label{
  position: absolute;
  left: 0;
  top: 0;
}

.tools{
  background-color: #ffffff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  left:0rpx;
  right:0rpx;
  bottom: 0;
  width: auto;
  height: 200rpx;
  box-sizing: border-box;
  padding: 0 40rpx;
}
.tools-btn-item{
  flex: 1;
}
.tools-btn-item+.tools-btn-item{
  margin-left: 40rpx;
}

.gpi-left-fav{
  font-size: 24rpx;
  color: #ff8800;
  border: 1px solid #ff8800;
  padding: 0 8rpx;
}
.gpi-left-fav.position{
  position: absolute;
  left: 250rpx;
  bottom: 0;
}

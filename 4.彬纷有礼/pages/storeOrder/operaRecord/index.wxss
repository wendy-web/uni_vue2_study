/* pages/storeOrder/operaRecord/index.wxss */
.opera-record{
  padding-top: 40rpx;
  position: relative;
}

.opera-record::after{
  content: '';
  position: absolute;
  left: 34rpx;
  width: 1rpx;
  background-color: #b7b7b7;
  top: 58rpx;
  bottom: 26rpx;
  margin-left: 8.5rpx;
}

.opera-record-item{
  display: flex;
  justify-content: space-between;
  padding-left: 72rpx;
  padding-right: 34rpx;
  position: relative;
  margin-bottom: 80rpx;
  z-index: 1;
}
.opera-record-first .ori-name,.opera-record-first .ori-left{
  color: #000000;
}

.opera-record-item::after{
  content: '';
  position: absolute;
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background-color: #B7B7B7;
  left: 34rpx;
  top: 50%;
  transform: translateY(-50%);
}

.opera-record-first::after{
  background-color: #E3001B;
}

.ori-name{
  font-size: 28rpx;
  font-weight: 400;
  text-align: left;
  color: #797979;
}

.ori-left{
  font-size: 28rpx;
  font-weight: 400;
  text-align: left;
  color: #797979;
}

.ori-event{
  margin-right: 20rpx;
}
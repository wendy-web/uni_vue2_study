.box {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 核销确认弹窗 start */

.icon-warn-box {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-bottom: -68rpx;
}

.icon_warn {
  width: 110rpx;
  height: 110rpx;
}



.order-box {
  box-sizing: border-box;
  background-color: #ffffff;
  flex: 1;
  max-width: 710rpx;
  min-width: 700rpx;
  min-height: 682rpx;
  max-height: 1020rpx;
  background: linear-gradient(180deg, #ffcfcf, #f5f5f5 19%);
  border-radius: 40rpx;
  display: flex;
  flex-direction: column;
  padding-bottom: 30rpx;
}

.apply-success {
  background: linear-gradient(180deg, #e3f9ef, #f5f5f5 19%);
}

.head-box {
  box-sizing: border-box;
  padding-top: 80rpx;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  color: #181818;
}

.head-box .head-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #181818;
}

.apply-title {
  font-size: 48rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: center;
  color: #181818;
}

.apply-ok {
  color: #009944;
}

.apply-fail {
  color: #E3001B;
}

.shop-address {
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #181818;
  word-wrap: break-word;
  box-sizing: border-box;
  padding: 20rpx 30rpx 0 30rpx;
  margin-bottom: 36rpx;
  text-align: center;

}

.operate-box {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.foot-box {
  box-sizing: border-box;

}

.btn-cancel {
  box-sizing: border-box;
  width: 300rpx;
  height: 96rpx;
  border: 2rpx solid #939393;
  border-radius: 48rpx;
  font-size: 36rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  color: #181818;
  line-height: 96rpx;
}

.btn-confirm {
  box-sizing: border-box;
  width: 300rpx;
  height: 96rpx;
  background: #e3001b;
  border-radius: 48rpx;

  font-size: 36rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  color: #ffffff;
  line-height: 96rpx;
}

.sku-box {
  flex: 1;
  overflow: scroll;
  max-height: 620rpx;
  box-sizing: border-box;
  padding: 20rpx 0;
}

.sku-item {
  box-sizing: border-box;
  min-height: 150rpx;
  background: #ffffff;
  border: 1rpx solid #e3001b;
  border-radius: 20rpx;

  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #555555;
  margin: 0 30rpx 16rpx 30rpx;
  padding: 0 26rpx 10rpx 26rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  z-index: 1;
  overflow: hidden;
}

.apply-status {
  position: absolute;
  top: 10px;
  right: -22px;
  background-color: #0aa55d;
  color: #ffffff;
  font-size: 12px;
  box-sizing: border-box;
  width: 120px;
  height: 28px;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: rotate(35deg);
  transform-origin: 60% 100%;
  transform-box: fill-box;
  padding-left: 4px;
}

.apply-status-fail {
  background-color: #e3001b;
}

.sku-num {
  font-size: 52rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: left;
  color: #181818;
}

.sku-item-title {
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #181818;
}

.sku-group {
  display: flex;
  align-items: center;
  justify-content: space-between;

  font-size: 36rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  color: #181818;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.sku-group-num {
  font-size: 44rpx;
}

.sku-group-unit {
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #555555;
}


  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  position: relative;
  margin-bottom: 20rpx;
}

.radio-label {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.select-item-box {
  min-height: 200rpx;
  border-radius: 20rpx;
  height: 100%;

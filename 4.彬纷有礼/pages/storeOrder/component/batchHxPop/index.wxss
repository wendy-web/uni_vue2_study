  padding: 40rpx 0 20rpx 0;
  box-sizing: border-box;
}

.more-select-box {
  box-sizing: border-box;
  max-height: 600rpx;
  overflow: scroll;
  position: relative;
  z-index: 2;
  margin-top: 20rpx;
}

.more-select-title {
  box-sizing: border-box;
  border-top: 1rpx dashed #707070;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: center;
  color: #797979;
  position: sticky;
  top: 0;
  z-index: 2;
  background-color: #f4f4f4;
  padding: 20rpx 10rpx 0 10rpx;
  margin: 0rpx 30rpx;
}

.title-red {
  color: #E3001B;
}

.brand-box {
  box-sizing: border-box;
  padding: 30rpx 0rpx 0rpx 30rpx;

}

.brand-title {
  font-size: 36rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: left;
  color: #181818;
}

.footer-box {
  display: flex;
  flex: 1;
  flex-shrink: 0;

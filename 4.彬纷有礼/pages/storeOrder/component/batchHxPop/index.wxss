  padding-bottom: 0 !important;
}

.icon_close_box {
  text-align: right;
  box-sizing: border-box;
  padding-right: 28rpx;
  padding-bottom: 10rpx;
}

.icon_close {
  width: 36rpx;
  height: 36rpx;
}

.select-hx-box {
  box-sizing: border-box;
  background-color: #f4f4f4;
  border-radius: 40rpx 40rpx 0 0;
  display: flex;
  flex-direction: column;

}

.current-select-box {
  box-sizing: border-box;
  margin: 0 30rpx;
  position: relative;
  z-index: 1;
}

.radio-container {

/* pages/storeDisplay/business/itemList.wxss */
.list-container {
  height: 100%;
  width: 100%;
}

.oneLine {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

/* 商城订单 start */
.store-list-box {
  color: #000018;
  border-bottom: 30rpx solid #f7f7f7;
}

.store-list-box .order-info-box {
  font-size: 24rpx;
  display: flex;
  align-items: center;
  height: 60rpx;
  padding: 0 30rpx;
}

.store-list-box .order-info-box .order-icon {
  width: 40rpx;
  height: 40rpx;
}

.store-list-box .order-info-box .order-color-grey {
  color: #A3A2A8;
}

.store-list-box .order-info-box-border-top {
  border-top: 2rpx solid #F7F7F7;
}

.store-list-box .mglr10 {
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.store-list-box .goods-info-box {
  font-size: 24rpx;
  color: #a3a2a8;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  border-top: 2rpx solid #f7f7f7;
  border-bottom: 2rpx solid #f7f7f7;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  position: relative;
}

.store-list-box .goods-info-box .sku-box {
  display: flex;
  align-items: center;
}

.goods-info-box .sku-info-box .sku-box .icon-dot {
  font-weight: bold;
  letter-spacing: 10rpx;
  font-size: 30rpx;
  margin-left: 30rpx;
}

.goods-info-box .sku-box .goods-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-left: 30rpx;
  filter: brightness(0.9);
}

.goods-info-box .sku-info-box {
  flex: 1;
  flex-shrink: 0;
  box-sizing: border-box;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
}



.goods-info-box .sku-info-box .sku-count {
  margin-left: 30rpx;
}

.goods-info-box .pay-info-box {
  padding-right: 30rpx;
  display: flex;
  align-items: flex-end;
  flex-direction: column;
  box-sizing: border-box;
  min-width: 309rpx;
}

.goods-info-box .pay-info-box .sub-title {
  font-size: 24rpx;
  font-family: SourceHanSansCN-Regular;
  color: #a3a2a8;
  height: 40rpx;
  letter-spacing: 0.29px;
}

.pay-info-box .pay-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #000018;
  text-align: right;
  width: 100%;
}

.pay-info-box .pay-item .icon-coin {
  font-size: 22rpx;
}

.pay-info-box .pay-item .flex-half {
  flex: 1;
  flex-shrink: 0;
  text-align: right;
}

.pay-info-box .pay-item .discount-color {
  color: #FD2B1E;
}

.pay-info-box .pay-item .icon-ticket {
  text-align: center;
  background: linear-gradient(180deg, #ffa169, #fc1b12);
  font-size: 24rpx;
  color: #ffffff;
  padding: 5rpx 6rpx;
  border-radius: 8rpx;
  margin-right: 5rpx;

}

.pay-info-box .pay-item .pay-price {
  font-weight: bold;
  font-size: 26rpx;
}

.store-operate-btn-box {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 30rpx 30rpx 30rpx 0;
}

.store-operate-btn-box .store-btn-cancel {
  width: 180rpx;
  height: 60rpx;
  opacity: 0.8;
  border: 1px solid #000018;
  color: #000000;
  font-size: 28rpx;
}

.store-operate-btn-box .store-btn-operate {
  width: 180rpx;
  height: 60rpx;
  color: #ffffff;
  background-color: #e3001b;
  border: 1px solid #e3001b;

  font-size: 28rpx;

}

.mgl40 {
  margin-left: 40rpx;
}

/* 商城订单 end */


.hx-list-box {
  border-bottom: 30rpx solid #f7f7f7;
}

.list-item-head {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  height: 80rpx;
}



.hx-list-box .list-item-content {
  display: flex;
  justify-content: space-between;
  color: #000018;
  font-size: 24rpx;
  border-top: 2rpx solid #f7f7f7;
  border-bottom: 2rpx solid #f7f7f7;
  padding: 30rpx;
}

.hx-list-box .list-item-content-left {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-shrink: 0;
  flex-direction: column;
  height: 100%;
  padding-top: 8rpx;
}

.hx-list-box .list-item-content-left .goods-thumb-box {
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
  font-size: 20rpx;
  background-color: #f7f7f7;
  box-sizing: border-box;
}

.goods-thumb-box .goods-thumb {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.prize-example {
  font-size: 18rpx;
  font-family: PingFang SC, PingFang SC-Light;
  font-weight: 300;
  text-align: center;
  color: #a3a2a8;
  letter-spacing: 0.22rpx;
}

.hx-list-box .list-item-content-left .order-apply-num {
  margin-top: 10rpx;
  width: 100%;
  text-align: center;
}

.hx-list-box .list-item-content-left-finish {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  flex: 0.45;
}

.hx-list-box .font40 {
  font-size: 40rpx;
}


.hx-list-box .green {
  color: #00B164;
}

.hx-list-box .red {
  color: #E10404;
}


.hx-list-box .order-status-ysl {
  color: #fdc81b;
}

.hx-list-box .list-item-btn {
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 99;
  padding-left: 170rpx;
  padding-right: 30rpx;
}


.hx-list-box .item-num {
  font-size: 40rpx;
  font-weight: bold;
}

.hx-list-box .list-item-content-right {
  font-size: 28rpx;
  flex: 1;
  position: relative;
  padding-left: 20rpx;
}

.hx-list-box .list-item-content-right view {
  margin-bottom: 8rpx;
}

.hx-list-box .list-call-box {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.hx-list-box .list-call {
  width: 28rpx;
  height: 28rpx;
  margin-left: 8rpx;
}

.hx-list-box .dsl-stamp {
  position: absolute;
  width: 190rpx;
  height: 190rpx;
  right: 20rpx;
  bottom: 0;
}

.hx-list-box .list-tips {
  color: #038FEC;
  font-size: 24rpx;
  padding-left: 36rpx;

}

.hx-list-box .list-tips .list-tips-text {
  color: #E73636;
}

.hx-list-box .list-item-btn .item-btn-left {
  flex: 0.35;
  padding: 0 20rpx;

}

.hx-list-box .list-item-btn .item-btn-right {
  flex: 1;
  text-align: right;
}

.hx-list-box .list-item-btn .btn-cancel {
  display: inline-block;
  box-sizing: border-box;
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #e73636;
  border: 2rpx solid #e73636;
  border-radius: 16px;
  text-align: center;
  background-color: #fff;
}

.hx-list-box .list-item-btn .btn-operate {
  display: inline-block;
  box-sizing: border-box;
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 500;
  background: #e10404;
  color: #fff;
  border-radius: 16px;
  margin-left: 56rpx;
}

.hx-list-box .list-item-btn .btn-operate-active {
  display: inline-block;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 500;
  background: #e10404;
  color: #fff;
  border-radius: 16px;
  z-index: 99;
}

.hx-list-box .list-item-btn .btn-operate-disabled {
  background-color: #c8c8c8;
  color: #fff;
}



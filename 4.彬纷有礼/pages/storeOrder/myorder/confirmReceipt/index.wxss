/* pages/storeOrder/myorder/confirmReceipt/index.wxss */
page {
  background-color: #ffffff;
}
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.order-box {
  padding: 30rpx;
  color: #000018;
  text-align: justify;
  font-size: 24rpx;
  position: relative;
  flex-shrink: 0;
  height: 100rpx;
}
.order-box::after {
  content: " ";
  width: 100%;
  height: 20rpx;
  background-color: #f7f7f7;
  position: absolute;
  left: 0;
  bottom: 0rpx;
}
.order-name {
  font-weight: 400;
  text-align: left;
  color: #797979;
}
.color-red {
  color: #e3001b;
}

.goods-box {
  padding: 0 30rpx 30rpx 30rpx;
  color: #000000;
  font-size: 24rpx;
  overflow: scroll;
  box-sizing: border-box;
  height: 100%;
}
.goods-item {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}

.goods-icon {
  height: 182rpx;
  width: 182rpx;
  background: rgba(0, 0, 0, 0);
  border-radius: 12rpx;
  flex-shrink: 0;
  filter: brightness(0.9);
  
}

.goods-detail {
  margin-left: 20rpx;
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-title {
  font-size: 28rpx;
}

.goods-sub-title {
  color: #797979;
}

.goods-price-box {
  padding: 0 30rpx 50rpx 30rpx;
  height: 400rpx;
  background-color: #ffffff;
  flex-shrink: 0;
  position: relative;
}
.goods-price-box:before {
  content: "";
  height: 20rpx;
  width: 100%;
  background-color: #f7f7f7;
  position: absolute;
  left: 0;
  top: 0;
}
.price-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
  font-size: 28rpx;
}

.flex-end {
  justify-content: flex-end;
  margin-bottom: 0rpx;
}

.color-grey {
  color: #000018;
}

.operate-box {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}

.bold700 {
  font-weight: 700;
}

.mgt20 {
  margin-top: 20rpx;
}

.tips {
  font-size: 24rpx;
  font-weight: 400;
  text-align: center;
  color: #e29015;
}



.width-100 {
  flex: 1;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}
.icon-ticket {
  text-align: center;
  background: linear-gradient(180deg, #ffa169, #fc1b12);
  font-size: 24rpx;
  color: #ffffff;
  padding: 1rpx 6rpx;
  border-radius: 8rpx;
  margin-right: 10rpx;
}

.operate-box .btn-operate {
  /* width: 314rpx; */
  /* width: 314rpx; */
  height: 96rpx;
  border-radius: 24px;
  font-size: 32rpx;
  flex: 1;
}
.operate-box .btn-operate-cancel {
  border: 1px solid #000018;
  color: #000000;
  background-color: #ffffff;
}
.operate-box .btn-operate-confirm {
  background-color: #e3001b;
  border: 1px solid #e3001b;
  color: #ffffff;

}
.operate-box .btn-operate:nth-child(2){
  margin-left: 20rpx;
}
.operate-box .width-100:nth-child(2){
  margin-left: 30rpx;
}
/* pages/storeOrder/pay/index.wxss */
.pay-box {
  height: 100vh;
  width: 100%;
  background-color: #f5f5f5;
  box-sizing: border-box;
  padding: 1rpx 20rpx 50rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.pay-box .pay-detail {
  margin-top: 30rpx;
  background: #ffffff;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #4e4d52;
  letter-spacing: 0.16px;
  padding: 30rpx 50rpx 30rpx 30rpx;
  box-sizing: border-box;

}

.pay-box .pay-detail .pay-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.pay-detail .pay-item .total-price-tag {
  color: #000018;
  font-size: 28rpx;
}

.pay-detail .pay-item .total-price {
  font-size: 34rpx;
}

.pay-detail .pay-item .discount-price-tag {
  color: #FD2B1E;
  font-size: 28rpx;
}

.icon-coupon {
  display: inline-block;
  width: 30rpx;
  line-height: 30rpx;
  height: 30rpx;
  padding: 3rpx;
  margin-right: 10rpx;
  text-align: center;
  color: #fff;
  background: linear-gradient(180deg, #ffa169, #fc1b12);
  font-size: 22rpx;
  border-radius: 4rpx;
}

.actual-pay {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  color: #000000;
  font-size: 32rpx;
}

.actual-pay .pay-tag {
  font-size: 36rpx;
  font-weight: 700;
  color: #000018;
  letter-spacing: 0.23px;
}

.mgl50 {
  margin-left: 50rpx;
}

.actual-pay .pay-price {
  font-size: 42rpx;
  font-weight: 700;
  color: #000018;
  letter-spacing: 0.23px;
}

.pay-box .btn-pay {
  background: #e3001b;
  color: #ffffff;
}

.pay-box .per-customer-transcation {
  display: inline-block;
  padding: 2rpx 10rpx;
  background: #ffffff;
  border: 0.3px solid #A3A2A8;
  border-radius: 22rpx;
  margin-right: 0;
  font-size: 22rpx;
  text-align: right;
  color: #A3A2A8;
  letter-spacing: 0.13px;
}

.pay-box .per-customer-box {
  text-align: right;
  margin-top: 10rpx;
}

.per-customer-box .pay-tag {
  font-weight: bold;
}

.font28 {
  font-size: 28rpx;
}

/* 支付结果页 */
.pay-result-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding-top: 120rpx;
}

.pay-result-box .icon-result {
  width: 140rpx;
  height: 140rpx;
}

.pay-result-box .pay-result-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #000000;
  margin-top: 34rpx;
}

.pay-result-box .order-detail-box {
  box-sizing: border-box;
  margin-top: 60rpx;
  padding: 0px 50rpx;
  width: 100%;
}

.pay-result-box .order-detail-box .order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-item .item-left {
  font-size: 26rpx;
  text-align: left;
  color: #4e4d52;
  letter-spacing: 0.16px;
  flex-shrink: 0;
}

.order-item .item-right {
  font-size: 26rpx;
  text-align: right;
  color: #000018;
  letter-spacing: 0.16px;
  max-width: 460rpx;
}

.font34 {
  font-size: 34rpx;
}

.mgt60 {
  margin-top: 50rpx;
}

.btn-check-result {
  width: 400rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #ffffff;
  border: 1px solid #333333;
  border-radius: 46rpx;
  margin-top: 80rpx;
  font-size: 36rpx;
  font-weight: 400;
  color: #000000;

}

.line-feed {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  /*! autoprefixer: off */
  /*行数*/
}
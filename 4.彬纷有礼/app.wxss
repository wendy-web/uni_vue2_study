.canvas-fixed{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.flex-align-center{
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.flex-center{
  display: flex;
  align-items: center;
  justify-content: center;
}
.flex-row{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.flex-column{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.space-around{
  justify-content: space-around;
}
.activityContainer{
  position: absolute;
  top: 0;
  height:783rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

}
.zindex1{
  z-index: 1;
}
.weui-half-screen-dialog__bd{
  -webkit-overflow-scrolling: touch
}
.animation-fade {
  animation-name: fade;
  animation-duration: .8s;
  animation-timing-function: linear;
  animation-fill-mode: both;
}
@keyframes fade {
  0% {
      opacity: 0
  }

  100% {
      opacity: 1
  }
}
@media screen and (min-width:768px){
  .weui-dialog{
    width: 76vw;
  }
}
.calendar-box .weui-dialog{
  top: 10%;
  max-height:70%!important;
}
.calendar-box .weui-dialog__bd:first-child{
  padding:unset;
}
.calendar-box .weui-dialog__bd{
  margin-bottom:unset;
}
.calendar-box .weui-dialog__ft{
  min-height: 100rpx;
  line-height: 100rpx;
}
/* 自定义tabbar */
.tabbar-container{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
}
.tabbar-container-content{
  flex: 1;
  position: relative;
  /* background-color: rebeccapurple; */
}
.tabbar-container-foot{
  flex-shrink: 0;
  min-height: 100rpx;
  box-sizing: border-box;
  /* background-color: green; */
  padding-bottom: env(safe-area-inset-bottom);
  position: sticky;
  bottom: 0;
}

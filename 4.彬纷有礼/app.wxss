  background: linear-gradient(0deg, #a10f16 0, #e71a19 100%);
  font-size: 28rpx;
  height: 96rpx;
  justify-content: center;
  align-items: center;
  display: flex;
}

.text-break {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.text-center {
